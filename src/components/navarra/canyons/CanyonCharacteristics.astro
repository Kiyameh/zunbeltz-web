---
import type { CollectionEntry } from "astro:content";

interface Props {
  canyon: CollectionEntry<"canyons">["data"];
}

const { canyon } = Astro.props;
---

<div class="card">
  <div class="header">
    <h3 class="title">Características Principales</h3>
  </div>
  <div class="content">
    <div class="characteristics-grid">
      {
        canyon.location && (
          <div class="char-item">
            <span class="char-label">Localidad</span>
            <span class="char-value">{canyon.location}</span>
          </div>
        )
      }
      {
        canyon.river && (
          <div class="char-item">
            <span class="char-label">Río</span>
            <span class="char-value">{canyon.river}</span>
          </div>
        )
      }
      {
        canyon.highestRappel && (
          <div class="char-item">
            <span class="char-label">Rápel máximo</span>
            <span class="char-value">{canyon.highestRappel} m</span>
          </div>
        )
      }
      {
        canyon.numberOfRappels && (
          <div class="char-item">
            <span class="char-label">Número de rápeles</span>
            <span class="char-value">{canyon.numberOfRappels}</span>
          </div>
        )
      }
      {
        canyon.length && (
          <div class="char-item">
            <span class="char-label">Longitud</span>
            <span class="char-value">{canyon.length} km</span>
          </div>
        )
      }
      {
        canyon.verticalDrop && (
          <div class="char-item">
            <span class="char-label">Desnivel</span>
            <span class="char-value">{canyon.verticalDrop} m</span>
          </div>
        )
      }
    </div>
  </div>
</div>

<style>
  /* Card */
  .card {
    background: var(--color-surface-200);
    border: 2px solid var(--color-border-100);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    font-family: var(--font-paragraph);
  }

  .header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .title {
    font-family: var(--font-title);
    font-size: 1.25rem;
    color: var(--color-content-500);
    margin: 0;
  }

  .content {
    color: var(--color-content-300);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  /* Características Principales Grid */
  .characteristics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.25rem;
  }

  .char-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .char-label {
    font-family: var(--font-paragraph);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-content-200);
    font-weight: 500;
  }

  .char-value {
    font-family: var(--font-title);
    font-size: 1.25rem;
    color: var(--color-primary-300);
    font-weight: 600;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card {
      padding: 1.25rem;
    }

    .title {
      font-size: 1.125rem;
    }

    .content {
      font-size: 0.875rem;
    }
  }
</style>
