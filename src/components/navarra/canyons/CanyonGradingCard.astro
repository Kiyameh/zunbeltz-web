---
import { Image } from "astro:assets";
import verticalImg from "@/assets/navarra/canyons/vertical.png";
import acuaticImg from "@/assets/navarra/canyons/acuatic.png";
import expositionImg from "@/assets/navarra/canyons/exposition.png";

interface Props {
  grading?: {
    vertical: number;
    aquatic: number;
    commitment: string;
  };
}

const { grading } = Astro.props;
---

{
  grading && (
    <>
      <div class="card">
        <div class="header">
          <h3 class="title">Graduación</h3>
        </div>
        <div class="content">
          <div class="grading-display">
            <div class="grading-item">
              <span class="grading-label">Vertical</span>
              <span class="grading-badge">v{grading.vertical}</span>
            </div>
            <div class="grading-item">
              <span class="grading-label">Acuático</span>
              <span class="grading-badge">a{grading.aquatic}</span>
            </div>
            <div class="grading-item">
              <span class="grading-label">Compromiso</span>
              <span class="grading-badge">{grading.commitment}</span>
            </div>
          </div>
          <button class="button secondary" id="openGradingDialog" type="button">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="12" cy="12" r="10" />
              <line x1="12" y1="16" x2="12" y2="12" />
              <line x1="12" y1="8" x2="12.01" y2="8" />
            </svg>
            <span>Ver tablas de graduación</span>
          </button>
        </div>
      </div>

      <dialog class="grading-dialog" id="gradingDialog">
        <div class="dialog-header">
          <h3 class="dialog-title">Tablas de Graduación de Barrancos</h3>
          <button
            class="dialog-close"
            id="closeGradingDialog"
            aria-label="Cerrar"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <line x1="18" y1="6" x2="6" y2="18" />
              <line x1="6" y1="6" x2="18" y2="18" />
            </svg>
          </button>
        </div>
        <div class="dialog-content">
          <div class="grading-images">
            <div class="grading-image-item">
              <h4>Graduación Vertical</h4>
              <Image src={verticalImg} alt="Tabla de graduación vertical" />
            </div>
            <div class="grading-image-item">
              <h4>Graduación Acuática</h4>
              <Image src={acuaticImg} alt="Tabla de graduación acuática" />
            </div>
            <div class="grading-image-item">
              <h4>Graduación de Compromiso</h4>
              <Image
                src={expositionImg}
                alt="Tabla de graduación de compromiso"
              />
            </div>
          </div>
        </div>
      </dialog>
    </>
  )
}

<script>
  function initGradingDialog() {
    const dialog = document.getElementById(
      "gradingDialog"
    ) as HTMLDialogElement | null;
    const openBtn = document.getElementById("openGradingDialog");
    const closeBtn = document.getElementById("closeGradingDialog");

    if (!dialog || !openBtn || !closeBtn) return;

    openBtn.addEventListener("click", () => {
      dialog.showModal();
    });

    closeBtn.addEventListener("click", () => {
      dialog.close();
    });

    // Cerrar al hacer clic fuera del contenido
    dialog.addEventListener("click", (e) => {
      const rect = dialog.getBoundingClientRect();
      if (
        e.clientX < rect.left ||
        e.clientX > rect.right ||
        e.clientY < rect.top ||
        e.clientY > rect.bottom
      ) {
        dialog.close();
      }
    });
  }

  document.addEventListener("astro:page-load", initGradingDialog);

  if (
    document.readyState === "complete" ||
    document.readyState === "interactive"
  ) {
    initGradingDialog();
  }
</script>

<style>
  /* Card */
  .card {
    background: var(--color-surface-100);
    border: 2px solid var(--color-border-100);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    font-family: var(--font-paragraph);
  }

  .header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .title {
    font-family: var(--font-title);
    font-size: 1.25rem;
    color: var(--color-content-500);
    margin: 0;
  }

  .content {
    color: var(--color-content-300);
    font-size: 0.9375rem;
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .grading-display {
    display: flex;
    justify-content: space-around;
    align-items: center;
    gap: 1rem;
    padding: 0.5rem 0;
  }

  .grading-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .grading-label {
    font-family: var(--font-paragraph);
    font-size: 0.75rem;
    color: var(--color-content-200);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .grading-badge {
    font-family: var(--font-title);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-surface-100);
    background: var(--color-secondary-300);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-md);
    min-width: 3rem;
    text-align: center;
  }

  /* Dialog */
  .grading-dialog {
    max-width: 95vw;
    max-height: 90vh;
    width: fit-content;
    border: none;
    border-radius: var(--radius-xl);
    padding: 0;
    background: var(--color-surface-100);
    box-shadow: var(--shadow-2xl);
    margin: auto;
  }

  .grading-dialog::backdrop {
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
  }

  .dialog-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem;
    border-bottom: 2px solid var(--color-border-100);
    background: var(--color-surface-100);
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
  }

  .dialog-title {
    font-family: var(--font-title);
    font-size: 1.5rem;
    color: var(--color-content-500);
    margin: 0;
  }

  .dialog-close {
    background: transparent;
    border: none;
    color: var(--color-content-300);
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-md);
    transition: all 0.2s ease;
  }

  .dialog-close:hover {
    background: var(--color-surface-300);
    color: var(--color-content-500);
  }

  .dialog-content {
    padding: 2rem;
    overflow-y: auto;
    max-height: calc(90vh - 100px);
  }

  .grading-images {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
  }

  .grading-image-item {
    flex: 1 1 300px;
    max-width: 500px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .grading-image-item h4 {
    font-family: var(--font-title);
    font-size: 1.125rem;
    color: var(--color-content-500);
    margin: 0;
    text-align: center;
  }

  .grading-image-item img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card {
      padding: 1.25rem;
    }

    .title {
      font-size: 1.125rem;
    }

    .content {
      font-size: 0.875rem;
    }

    .grading-dialog {
      max-width: 100vw;
      max-height: 100vh;
      border-radius: 0;
    }

    .dialog-header {
      padding: 1rem;
      border-radius: 0;
    }

    .dialog-title {
      font-size: 1.125rem;
    }

    .dialog-content {
      padding: 1rem;
      max-height: calc(100vh - 80px);
    }

    .grading-images {
      gap: 1.5rem;
    }

    .grading-image-item {
      flex: 1 1 100%;
      max-width: 100%;
    }

    .grading-image-item h4 {
      font-size: 1rem;
    }
  }
</style>
