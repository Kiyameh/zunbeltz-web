---
interface Props {
  catalogCode?: string;
  subterraUrl?: string;
  alternativeNames?: string[];
}

const { catalogCode, subterraUrl, alternativeNames } = Astro.props;
---

{
  (catalogCode ||
    subterraUrl ||
    (alternativeNames && alternativeNames.length > 0)) && (
    <div class="card">
      <div class="header">
        <h3 class="title">Información Adicional</h3>
      </div>
      <div class="content">
        <div class="stats-list">
          {catalogCode && (
            <div class="stat-item">
              <span class="stat-label">Código de catálogo</span>
              <span class="stat-value catalog-code">{catalogCode}</span>
            </div>
          )}
          {alternativeNames && alternativeNames.length > 0 && (
            <div class="stat-item-full">
              <span class="stat-label">Nombres alternativos</span>
              <div class="alt-names-list">
                {alternativeNames.map((name) => (
                  <span class="alt-name-badge">{name}</span>
                ))}
              </div>
            </div>
          )}
          {subterraUrl && (
            <div class="stat-item-full">
              <a
                href={subterraUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="external-link"
              >
                Ver en Subterra →
              </a>
            </div>
          )}
        </div>
      </div>
    </div>
  )
}

<style>
  /* Card */
  .card {
    background: var(--color-surface-100);
    border: 2px solid var(--color-border-100);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    font-family: var(--font-paragraph);
  }

  .header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .title {
    font-family: var(--font-title);
    font-size: 1.25rem;
    color: var(--color-content-500);
    margin: 0;
  }

  .content {
    color: var(--color-content-300);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  .stats-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .stat-item {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border-100);
  }

  .stat-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .stat-label {
    font-family: var(--font-paragraph);
    font-size: 0.875rem;
    color: var(--color-content-200);
  }

  .stat-value {
    font-family: var(--font-title);
    font-size: 1.125rem;
    color: var(--color-primary-300);
    font-weight: 600;
  }

  .catalog-code {
    font-family: "Courier New", monospace;
    font-size: 1rem;
  }

  .stat-item-full {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border-100);
  }

  .stat-item-full:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  /* Alternative Names */
  .alt-names-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .alt-name-badge {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background: var(--color-surface-200);
    border-radius: var(--radius-md);
    font-family: var(--font-paragraph);
    font-size: 0.875rem;
    color: var(--color-content-400);
    font-weight: 500;
  }

  /* External Link */
  .external-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-paragraph);
    font-size: 0.9rem;
    color: var(--color-secondary-300);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
  }

  .external-link:hover {
    color: var(--color-secondary-400);
    text-decoration: underline;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card {
      padding: 1.25rem;
    }

    .title {
      font-size: 1.125rem;
    }

    .content {
      font-size: 0.875rem;
    }
  }
</style>
