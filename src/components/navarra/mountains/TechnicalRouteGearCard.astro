---
interface Props {
  requiredGear: string[];
}

const { requiredGear } = Astro.props;
---

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Material Necesario</h3>
  </div>
  <div class="card-content">
    <ul class="gear-list">
      {requiredGear.map((item) => <li>{item}</li>)}
    </ul>
  </div>
</div>

<style>
  /* Card */
  .card {
    background: var(--color-surface-100);
    border: 2px solid var(--color-border-100);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    font-family: var(--font-paragraph);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .card-title {
    font-family: var(--font-title);
    font-size: 1.25rem;
    color: var(--color-content-500);
    margin: 0;
  }

  .card-content {
    color: var(--color-content-300);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  .gear-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .gear-list li {
    font-family: var(--font-paragraph);
    font-size: 0.875rem;
    color: var(--color-content-300);
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-border-100);
    display: flex;
    align-items: center;
  }

  .gear-list li:last-child {
    border-bottom: none;
  }

  .gear-list li::before {
    content: "âœ“";
    color: var(--color-secondary-400);
    font-weight: bold;
    margin-right: 0.75rem;
    font-size: 1rem;
    flex-shrink: 0;
  }

  /* Dark theme */
  :global([data-theme="dark"]) .card {
    background: var(--color-surface-200);
    border-color: var(--color-border-200);
  }

  :global([data-theme="dark"]) .gear-list li {
    border-bottom-color: var(--color-border-200);
  }
</style>
