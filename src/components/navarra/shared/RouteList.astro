---
import GradeDisplay from "./GradeDisplay.astro";

interface ClimbingGrade {
  number: number;
  letter: "a" | "b" | "c";
  modifier?: "+" | "-";
}

interface ClimbingPitch {
  number: number;
  length: number;
  description: string;
  difficulty: ClimbingGrade;
}

interface ClimbingRoute {
  name: string;
  description: string;
  heightMeters?: number;
  difficulty: ClimbingGrade;
  pitches: ClimbingPitch[];
  style: "Deportiva" | "Clásica" | "Mixta" | "Artificial" | "Boulder";
  protection: "Equipada" | "Parcialmente Equipada" | "Desequipada";
  firstAscent?: string;
  requiredGear?: string;
}

interface Props {
  routes: ClimbingRoute[];
  showFilters?: boolean;
}

const { routes, showFilters = false } = Astro.props;

// Calcular altura total si no está especificada
const getTotalHeight = (route: ClimbingRoute) => {
  if (route.heightMeters) return route.heightMeters;
  return route.pitches.reduce((sum, pitch) => sum + pitch.length, 0);
};

// Formatear graduación
const formatGrade = (grade: ClimbingGrade) => {
  return `${grade.number}${grade.letter}${grade.modifier || ""}`;
};

// Color según estilo
const getStyleColor = (style: string) => {
  switch (style) {
    case "Deportiva":
      return "sport";
    case "Clásica":
      return "trad";
    case "Mixta":
      return "mixed";
    case "Artificial":
      return "aid";
    case "Boulder":
      return "boulder";
    default:
      return "sport";
  }
};
---

<div class="route-list">
  {
    routes.map((route) => (
      <div class="route-item">
        <div class="route-header">
          <div class="route-title-section">
            <h4 class="route-name">{route.name}</h4>
            <div class="route-badges">
              <span class={`style-badge ${getStyleColor(route.style)}`}>
                {route.style}
              </span>
              <span class="protection-badge">{route.protection}</span>
            </div>
          </div>
          <div class="route-grade">
            <GradeDisplay grade={route.difficulty} size="medium" />
          </div>
        </div>

        <p class="route-description">{route.description}</p>

        <div class="route-stats">
          <div class="stat">
            <span class="stat-label">Altura</span>
            <span class="stat-value">{getTotalHeight(route)}m</span>
          </div>
          <div class="stat">
            <span class="stat-label">Largos</span>
            <span class="stat-value">{route.pitches.length}</span>
          </div>
          {route.firstAscent && (
            <div class="stat">
              <span class="stat-label">Primera</span>
              <span class="stat-value">{route.firstAscent}</span>
            </div>
          )}
        </div>

        {route.requiredGear && (
          <div class="gear-info">
            <span class="gear-label">Material:</span>
            <span class="gear-text">{route.requiredGear}</span>
          </div>
        )}
      </div>
    ))
  }

  {
    routes.length === 0 && (
      <div class="empty-state">
        <p>No hay vías disponibles</p>
      </div>
    )
  }
</div>

<style>
  .route-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .route-item {
    background: var(--color-surface-100);
    border: 2px solid var(--color-border-100);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  .route-item:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-secondary-300);
  }

  .route-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .route-title-section {
    flex: 1;
  }

  .route-name {
    font-family: var(--font-title);
    font-size: 1.125rem;
    color: var(--color-content-500);
    margin: 0 0 0.5rem 0;
  }

  .route-badges {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .style-badge,
  .protection-badge {
    font-family: var(--font-paragraph);
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.25rem 0.625rem;
    border-radius: var(--radius-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .style-badge.sport {
    background: oklch(90% 0.08 220);
    color: oklch(35% 0.12 220);
  }

  .style-badge.trad {
    background: oklch(90% 0.08 140);
    color: oklch(35% 0.12 140);
  }

  .style-badge.mixed {
    background: oklch(90% 0.08 40);
    color: oklch(35% 0.12 40);
  }

  .style-badge.aid {
    background: oklch(90% 0.08 280);
    color: oklch(35% 0.12 280);
  }

  .style-badge.boulder {
    background: oklch(90% 0.08 10);
    color: oklch(35% 0.12 10);
  }

  .protection-badge {
    background: var(--color-surface-200);
    color: var(--color-content-300);
    border: 1px solid var(--color-border-100);
  }

  .route-grade {
    flex-shrink: 0;
  }

  .route-description {
    font-family: var(--font-paragraph);
    font-size: 0.9rem;
    color: var(--color-content-300);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .route-stats {
    display: flex;
    gap: 2rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border-100);
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-label {
    font-family: var(--font-paragraph);
    font-size: 0.7rem;
    color: var(--color-content-200);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-value {
    font-family: var(--font-title);
    font-size: 0.95rem;
    color: var(--color-content-400);
    font-weight: 600;
  }

  .gear-info {
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--color-border-100);
  }

  .gear-label {
    font-family: var(--font-paragraph);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-content-400);
  }

  .gear-text {
    font-family: var(--font-paragraph);
    font-size: 0.85rem;
    color: var(--color-content-300);
    margin-left: 0.5rem;
  }

  .empty-state {
    padding: 3rem;
    text-align: center;
    color: var(--color-content-200);
    font-family: var(--font-paragraph);
  }

  /* Dark theme */
  :global([data-theme="dark"]) .route-item {
    background: var(--color-surface-200);
    border-color: var(--color-border-200);
  }

  :global([data-theme="dark"]) .style-badge.sport {
    background: oklch(25% 0.05 220);
    color: oklch(75% 0.12 220);
  }

  :global([data-theme="dark"]) .style-badge.trad {
    background: oklch(25% 0.05 140);
    color: oklch(75% 0.12 140);
  }

  :global([data-theme="dark"]) .style-badge.mixed {
    background: oklch(25% 0.05 40);
    color: oklch(75% 0.12 40);
  }

  :global([data-theme="dark"]) .style-badge.aid {
    background: oklch(25% 0.05 280);
    color: oklch(75% 0.12 280);
  }

  :global([data-theme="dark"]) .style-badge.boulder {
    background: oklch(25% 0.05 10);
    color: oklch(75% 0.12 10);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .route-item {
      padding: 1.25rem;
    }

    .route-header {
      flex-direction: column;
    }

    .route-stats {
      gap: 1rem;
      flex-wrap: wrap;
    }
  }
</style>
