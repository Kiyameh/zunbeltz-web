---
interface Props {
  photo: {
    url: {
      src: string;
      width: number;
      height: number;
      format: string;
    };
    alt: string;
    caption?: string;
    photographer?: string;
  };
}

const { photo } = Astro.props;
---

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Foto del Sector</h3>
  </div>
  <div class="card-content">
    <img src={photo.url.src} alt={photo.alt} class="sector-photo" />
    {
      (photo.caption || photo.photographer) && (
        <div class="photo-info">
          {photo.caption && <p class="photo-caption">{photo.caption}</p>}
          {photo.photographer && (
            <p class="photo-credit">ðŸ“· {photo.photographer}</p>
          )}
        </div>
      )
    }
  </div>
</div>

<style>
  /* Card */
  .card {
    background: var(--color-surface-100);
    border: 2px solid var(--color-border-100);
    border-radius: var(--radius-xl);
    padding: 1rem;
    font-family: var(--font-paragraph);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    padding: 0 0.5rem;
  }

  .card-title {
    font-family: var(--font-title);
    font-size: 1.25rem;
    color: var(--color-content-500);
    margin: 0;
  }

  .card-content {
    color: var(--color-content-300);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  .sector-photo {
    width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    display: block;
  }

  .photo-info {
    padding: 0.75rem 0.5rem 0.25rem;
  }

  .photo-caption {
    font-family: var(--font-paragraph);
    font-size: 0.875rem;
    color: var(--color-content-200);
    text-align: center;
    font-style: italic;
    margin: 0 0 0.5rem 0;
  }

  .photo-credit {
    font-family: var(--font-paragraph);
    font-size: 0.75rem;
    color: var(--color-content-200);
    text-align: center;
    margin: 0;
  }

  /* Dark theme */
  :global([data-theme="dark"]) .card {
    background: var(--color-surface-200);
    border-color: var(--color-border-200);
  }
</style>
