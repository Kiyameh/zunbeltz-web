---
import type { ViaFerrata } from "@/schemas/activities";

interface Props {
  viaFerrata: ViaFerrata;
}

const { viaFerrata } = Astro.props;

const { length, elevationGain, duration, grading } = viaFerrata;

// Formatear duración
const formatDuration = () => {
  const parts = [];
  if (duration.days && duration.days > 0) parts.push(`${duration.days}d`);
  if (duration.hours && duration.hours > 0) parts.push(`${duration.hours}h`);
  if (duration.minutes && duration.minutes > 0)
    parts.push(`${duration.minutes}min`);
  return parts.join(" ");
};
---

<div class="card">
  <div class="header">
    <h3 class="title">Datos de la vía ferrata</h3>
  </div>
  <div class="grid">
    <div class="grid-item">
      <span class="label">Longitud</span>
      <span class="value">{length} m</span>
    </div>
    <div class="grid-item">
      <span class="label">Desnivel</span>
      <span class="value">{elevationGain} m</span>
    </div>
    <div class="grid-item">
      <span class="label">Duración</span>
      <span class="value">{formatDuration()}</span>
    </div>
    <div class="grid-item">
      <span class="label">Dificultad</span>
      <span class="value grade">{grading}</span>
    </div>
  </div>
</div>

<style>
  /* Card */
  .card {
    background: var(--color-surface-100);
    border: 2px solid var(--color-border-100);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    font-family: var(--font-paragraph);
  }

  .header {
    margin-bottom: 1rem;
  }

  .title {
    font-family: var(--font-title);
    font-size: 1.25rem;
    margin: 0;
  }

  /* Grid */
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
  }

  .grid-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .label {
    font-size: 0.875rem;
    color: var(--color-content-200);
    font-weight: 500;
  }

  .value {
    font-size: 0.9375rem;
    color: var(--color-content-400);
    font-weight: 600;
  }

  .value.grade {
    color: var(--color-secondary-400);
    font-size: 1.125rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .grid {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
