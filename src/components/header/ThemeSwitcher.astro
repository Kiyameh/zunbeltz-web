<!-- Región para anunciar cambios de tema a lectores de pantalla -->
<div
  class="sr-only"
  aria-live="polite"
  aria-atomic="true"
  id="theme-announcement"
>
</div>

<script>
  import { applyTheme, getCurrentTheme, type Theme } from "@/utils/theme-utils";

  // Actualizar aria-label de todos los botones según el tema actual
  const updateAriaLabels = (currentTheme: Theme) => {
    const newLabel =
      currentTheme === "dark"
        ? "Cambiar a tema claro"
        : "Cambiar a tema oscuro";

    document
      .querySelectorAll<HTMLButtonElement>(".theme-toggle")
      .forEach((button) => {
        button.setAttribute("aria-label", newLabel);
      });
  };

  // Anunciar cambio de tema para lectores de pantalla
  const announceThemeChange = (newTheme: Theme) => {
    const announcement = document.getElementById("theme-announcement");
    if (announcement) {
      const message =
        newTheme === "dark" ? "Tema oscuro activado" : "Tema claro activado";
      announcement.textContent = message;
    }
  };

  // Función para toggle del tema
  const toggleTheme = () => {
    const currentTheme = getCurrentTheme();
    const newTheme: Theme = currentTheme === "dark" ? "light" : "dark";

    applyTheme(newTheme);
    updateAriaLabels(newTheme);
    announceThemeChange(newTheme);
  };

  // Sincronizar tema entre pestañas/ventanas
  const syncThemeAcrossTabs = (event: StorageEvent) => {
    if (event.key === "theme" && event.newValue) {
      const newTheme = event.newValue as Theme;
      document.documentElement.setAttribute("data-theme", newTheme);
      updateAriaLabels(newTheme);
    }
  };

  // Inicializar aria-labels al cargar
  const initializeAriaLabels = () => {
    const currentTheme = getCurrentTheme();
    updateAriaLabels(currentTheme);
  };

  // Event listener para clicks en botones de tema
  document.addEventListener("click", (event) => {
    const target = event.target as HTMLElement;
    const button = target.closest(".theme-toggle");
    if (button) {
      toggleTheme();
    }
  });

  // Event listener para sincronización entre pestañas
  window.addEventListener("storage", syncThemeAcrossTabs);

  // Inicializar
  initializeAriaLabels();
</script>

<style>
  .theme-toggle {
    position: relative;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 99px;
    background-color: var(--color-surface-100);
    border: 1px solid var(--color-border-100);
    cursor: pointer;
    overflow: hidden;
    width: 36px;
    height: 36px;
    color: inherit;
  }

  .theme-toggle:hover {
    background-color: var(--color-surface-200);
  }

  .icon {
    position: absolute;
    fill: currentcolor;
    width: 20px;
    height: 20px;
    transform-origin: 50% 200%;
    transition:
      transform 0.4s ease-out,
      opacity 0.2s ease-in-out;
  }

  .sun {
    transform: rotate(0deg);
  }
  .moon {
    transform: rotate(180deg);
  }

  :global([data-theme="dark"]) .theme-toggle .sun {
    transform: rotate(180deg);
  }

  :global([data-theme="dark"]) .theme-toggle .moon {
    transform: rotate(360deg);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>
