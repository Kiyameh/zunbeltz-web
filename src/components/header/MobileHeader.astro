---
import AccountControls from "../header/AccountControls.astro";
import ThemeSwitcher from "./ThemeSwitcher.astro";
import { NavigationMobile } from "./NavigationMobile";
import { SearchUtility } from "./SearchUtility";
import Logotipe from "@/assets/branding/logo.svg?react";
---

<header class="header">
  <div class="logo">
    <a href="/">
      <Logotipe className="logo-img" />
    </a>
  </div>
  <button
    id="mobile-menu-toggle"
    class="burgerButton"
    aria-label="Toggle menu"
    aria-expanded="false"
    aria-controls="mobile-menu-overlay"
  >
    <span class="burgerLine"></span>
    <span class="burgerLine"></span>
    <span class="burgerLine"></span>
  </button>
</header>

<!-- Spacer para compensar el header fijo -->
<div class="headerSpacer"></div>

<div
  id="mobile-menu-overlay"
  class="menuOverlay"
  role="dialog"
  aria-modal="true"
  aria-label="Mobile navigation menu"
>
  <div class="menuContainer">
    <NavigationMobile client:load />

    <div class="toolsSlot">
      <div class="toolGroup">
        <AccountControls />
        <ThemeSwitcher />
      </div>
      <div class="toolGroup">
        <SearchUtility client:load />
      </div>
    </div>
  </div>
</div>

<script>
  const toggleButton = document.getElementById("mobile-menu-toggle");
  const menuOverlay = document.getElementById("mobile-menu-overlay");
  let previousFocusedElement: HTMLElement | null = null;

  const closeMenu = () => {
    menuOverlay?.classList.remove("menuOverlayOpen");
    toggleButton?.classList.remove("burgerOpen");
    toggleButton?.setAttribute("aria-expanded", "false");
    document.body.style.overflow = "";

    // Restaurar foco al botón que abrió el menú
    if (previousFocusedElement) {
      previousFocusedElement.focus();
      previousFocusedElement = null;
    }
  };

  const openMenu = () => {
    menuOverlay?.classList.add("menuOverlayOpen");
    toggleButton?.classList.add("burgerOpen");
    toggleButton?.setAttribute("aria-expanded", "true");
    document.body.style.overflow = "hidden";

    // Guardar el elemento que tenía el foco
    previousFocusedElement = document.activeElement as HTMLElement;

    // Enfocar el primer elemento interactivo del menú
    setTimeout(() => {
      const firstFocusable = menuOverlay?.querySelector<HTMLElement>(
        'a, button, input, [tabindex]:not([tabindex="-1"])'
      );
      firstFocusable?.focus();
    }, 100);
  };

  const toggleMenu = () => {
    if (menuOverlay?.classList.contains("menuOverlayOpen")) {
      closeMenu();
    } else {
      openMenu();
    }
  };

  // Toggle del botón
  toggleButton?.addEventListener("click", toggleMenu);

  // Cerrar menú al hacer clic en cualquier enlace
  menuOverlay?.addEventListener("click", (e) => {
    const target = e.target as HTMLElement;
    if (target.tagName === "A" || target.closest("a")) {
      closeMenu();
    }
  });

  // Cerrar menú con tecla Escape
  document.addEventListener("keydown", (e) => {
    if (
      e.key === "Escape" &&
      menuOverlay?.classList.contains("menuOverlayOpen")
    ) {
      closeMenu();
    }
  });

  // Trap focus dentro del menú cuando está abierto
  menuOverlay?.addEventListener("keydown", (e) => {
    if (e.key === "Tab" && menuOverlay?.classList.contains("menuOverlayOpen")) {
      const focusableElements = menuOverlay.querySelectorAll<HTMLElement>(
        'a, button, input, [tabindex]:not([tabindex="-1"])'
      );
      const firstElement = focusableElements[0];
      const lastElement = focusableElements[focusableElements.length - 1];

      if (e.shiftKey && document.activeElement === firstElement) {
        e.preventDefault();
        lastElement?.focus();
      } else if (!e.shiftKey && document.activeElement === lastElement) {
        e.preventDefault();
        firstElement?.focus();
      }
    }
  });

  // Usar CustomEvent en lugar de contaminar window
  // NavigationMobile puede escuchar este evento
  document.addEventListener("closeMobileMenu", closeMenu);

  // Exponer función para cerrar el menú mediante evento
  const dispatchCloseMenu = () => {
    document.dispatchEvent(new CustomEvent("closeMobileMenu"));
  };

  // Hacer disponible la función de dispatch para otros componentes
  (window as any).__dispatchCloseMobileMenu = dispatchCloseMenu;
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 1.5rem;
    z-index: 1500;
    height: 3.75rem;
  }

  .logo {
    font-family: var(--font-title);
    font-size: 1.25rem;
  }
  .logo-img {
    width: 12rem;
  }

  /* Header Spacer - Compensa el header fijo */
  .headerSpacer {
    height: 3.75rem;
  }

  /* Burger Button */
  .burgerButton {
    cursor: pointer;

    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 8px;

    background-color: var(--color-surface-200);
    border-radius: 8px;
    border: 1px solid var(--color-border-100);
    box-shadow: var(--shadow-md);

    transition: background-color 0.3s ease;
  }

  .burgerButton:hover {
    background-color: var(--color-surface-100);
  }

  .burgerLine {
    width: 18px;
    height: 3px;
    background-color: var(--color-content-200);
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  /* Burger Animation */
  .burgerOpen .burgerLine:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .burgerOpen .burgerLine:nth-child(2) {
    opacity: 0;
  }

  .burgerOpen .burgerLine:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* Full Screen Menu Overlay */
  .menuOverlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    height: 100dvh;

    background-color: var(--color-surface-300);

    transform: translateX(-100%);
    transition: transform 0.4s ease;

    z-index: 1000;
    overflow-y: auto;
  }

  .menuOverlayOpen {
    transform: translateX(0);
  }

  /* Menu Container */
  .menuContainer {
    width: 100%;
    min-height: 100%;
    padding: 80px 20px 40px;

    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  /* Tools Slot */
  .toolsSlot {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
    padding-top: 24px;
    margin-top: 24px;
    border-top: 1px solid var(--color-surface-100);
  }

  .toolGroup {
    width: 80%;

    display: flex;
    justify-content: center;
    align-items: center;
    gap: 6px;
  }
</style>
