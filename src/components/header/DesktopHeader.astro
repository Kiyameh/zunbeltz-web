---
import AccountControls from "../authentication/AccountControls.astro";
import { Navigation } from "../navigation/Navigation";
import ThemeSwitcher from "../theme/ThemeSwitcher.astro";
---

<header>
  <div class="logo">Zunbeltz</div>

  <div class="desktop-nav">
    <Navigation client:load />
  </div>

  <div class="desktop-controls">
    <AccountControls />
    <ThemeSwitcher />
  </div>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 1.5rem;
    background-color: var(--color-surface-200);
  }

  .logo {
    font-family: var(--font-title);
    font-size: 1.25rem;
  }
  .desktop-nav {
    flex: 1;
  }
  .desktop-controls {
    display: flex;
    align-items: center;
    gap: 4px;
  }
</style>
