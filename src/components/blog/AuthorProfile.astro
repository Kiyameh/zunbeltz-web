---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import Instagram from "@/icons/brand-instagram.svg";
import Facebook from "@/icons/brand-facebook.svg";
import X from "@/icons/brand-x.svg";
import Website from "@/icons/world-www.svg";
import MailPlus from "@/icons/mail-plus.svg";

interface Props {
  author: CollectionEntry<"authors"> | null | undefined;
}

const { author = false } = Astro.props;

if (!author) return null;
---

<article class="container">
  <a
    href={`/blog/autor/${author.id}`}
    class="full-card-link"
    aria-label={`Ver perfil de ${author.data.name}`}
  >
    <span class="sr-only">Ver perfil</span>
  </a>
  <header class="header">
    <div class="avatar">
      <Image
        src={author.data.avatar}
        alt={author.data.name}
        width={80}
        height={80}
        quality={90}
      />
    </div>
    <h3 class="name">{author.data.name}</h3>
    {
      author.data.social && (
        <div class="socials">
          {author.data.social.instagram && (
            <a
              href={author.data.social.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="social-link"
              title="Instagram"
            >
              <Instagram />
            </a>
          )}
          {author.data.social.facebook && (
            <a
              href={author.data.social.facebook}
              target="_blank"
              rel="noopener noreferrer"
              class="social-link"
              title="Facebook"
            >
              <Facebook />
            </a>
          )}
          {author.data.social.twitter && (
            <a
              href={author.data.social.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="social-link"
              title="Twitter"
            >
              <X />
            </a>
          )}
          {author.data.website && (
            <a
              href={author.data.website}
              target="_blank"
              rel="noopener noreferrer"
              class="social-link"
              title="Website"
            >
              <Website />
            </a>
          )}
          {author.data.email && (
            <a
              href={`mailto:${author.data.email}`}
              target="_blank"
              rel="noopener noreferrer"
              class="social-link"
              title="Email"
            >
              <MailPlus />
            </a>
          )}
        </div>
      )
    }
  </header>
  <main class="bio">
    <p>{author.data.bio}</p>
  </main>
</article>
<style>
  /* Layout */
  .container {
    position: relative;
    border-radius: var(--radius-2xl);
    border: 1px solid var(--color-border-200);
    background-color: var(--color-surface-200);
    transition: all 0.2s ease;
    box-shadow: var(--shadow-md);
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    overflow: hidden;
  }

  .container:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }

  .container:focus-within {
    outline: 2px solid var(--color-secondary-300);
  }

  .full-card-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  /* Header */
  .header {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
    min-width: 200px;
    background-color: var(--color-surface-300);
    flex: 1;
  }
  .header .avatar {
    flex-shrink: 0;
  }

  .header img {
    margin: auto;
    border-radius: var(--radius-full);
    object-fit: cover;
  }

  .header h3 {
    font-family: var(--font-title);
    font-size: 1.125rem;
    text-wrap: wrap;
    text-align: center;
  }

  .socials {
    display: flex;
    gap: 0.5rem;
    position: relative;
    z-index: 2;
  }

  .social-link {
    color: var(--color-content-200);
    transition: color 0.2s ease;
    display: block;
  }

  .social-link:hover {
    color: var(--color-secondary-300);
  }

  .bio {
    font-size: 1.1rem;
    padding: 1rem;
    flex: 5;
  }
</style>
