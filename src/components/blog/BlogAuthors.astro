---
import { getAllAuthors } from "@/services/strapi/repositories/author.repo";

const authors = await getAllAuthors();
---

<aside class="authors-widget">
  <header class="authors-header">
    <h3 class="authors-title title-3">
      <a href="/blog/autor" class="anchor neutral">Autores</a>
    </h3>
  </header>
  <ul class="authors-list">
    {
      authors.map((author) => (
        <li class="author-item">
          <a class="anchor primary" href={`/blog/autor/${author.slug}`}>
            {author.name}
          </a>
          <span class="post-count">({author.posts.length})</span>
        </li>
      ))
    }
  </ul>
</aside>

<style>
  .authors-title {
    color: var(--color-content-300);
  }

  .authors-list {
    max-width: 320px;
    padding-left: 1rem;
  }

  .author-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .post-count {
    font-size: 0.8rem;
    color: var(--color-content-200);
  }
</style>
