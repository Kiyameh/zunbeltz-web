---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;

// Formatear fecha
const formattedDate = post.data.publishDate.toLocaleDateString("es-ES", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="post-card">
  <a href={`/blog/${post.slug}`}>
    <div class="post-card-image">
      <Image
        src={post.data.heroImage}
        alt={post.data.title}
        width={800}
        height={250}
        quality={80}
        loading="lazy"
      />
    </div>

    <div class="post-card-content">
      <div class="post-card-meta">
        <time datetime={post.data.publishDate.toISOString()}>
          {formattedDate}
        </time>
        <div class="post-card-categories">
          {
            post.data.categories.map((category) => (
              <span class="chip secondary">{category}</span>
            ))
          }
        </div>
      </div>

      <h2 class="post-card-title">{post.data.title}</h2>
      <p class="post-card-description">{post.data.description}</p>
    </div>
  </a>
</article>

<style>
  .post-card {
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 1rem;

    background-color: var(--color-surface-200);
    border-radius: var(--radius-3xl);
    border: 1px solid var(--color-border-200);

    box-shadow: var(--shadow-md);
    transition: box-shadow 0.2s ease;
  }

  .post-card:hover {
    box-shadow: var(--shadow-lg);
  }

  .post-card-image {
    width: 100%;
    aspect-ratio: 16 / 5;
    overflow: hidden;
    background-color: var(--color-surface-300);
  }

  .post-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-card-image img {
    transform: scale(1.05);
  }

  .post-card-content {
    padding: 1.5rem;
  }

  .post-card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .post-card-meta time {
    font-family: var(--font-paragraph);
    font-size: 0.875rem;
    color: var(--color-content-100);
  }

  .post-card-categories {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .post-card-title {
    font-family: var(--font-title);
    font-size: 1.5rem;
    color: var(--color-content-400);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .post-card-description {
    font-family: var(--font-paragraph);
    font-size: 1rem;
    color: var(--color-content-300);
    line-height: 1.6;
  }

  @media (max-width: 640px) {
    .post-card-content {
      padding: 1rem;
    }

    .post-card-title {
      font-size: 1.25rem;
    }

    .post-card-description {
      font-size: 0.9rem;
    }
  }
</style>
