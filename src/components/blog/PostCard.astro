---
import type { Post } from "@/interfaces/blog/post";
import { Image } from "astro:assets";

interface Props {
  post: Post;
}

const { post } = Astro.props;

// Formatear fecha
const formattedDate = post.publishedAt?.toLocaleDateString("es-ES", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="post-card">
  <a href={`/blog/${post.slug}`}>
    <div class="post-card-image">
      {
        post.cover && (
          <Image
            class="post-card-hero-image"
            src={post.cover.href}
            alt={post.title}
            width={800}
            height={250}
            quality={80}
            loading="lazy"
          />
        )
      }
    </div>

    <div class="post-card-content">
      <div class="post-card-meta">
        <time datetime={post.publishedAt?.toISOString()}>
          {formattedDate}
        </time>
      </div>

      <h2 class="post-card-title">{post.title}</h2>
      <p class="post-card-description">{post.description}</p>

      {
        post.author && (
          <div class="post-card-author">
            {post.author.avatar && (
              <Image
                class="post-card-author-avatar"
                src={post.author.avatar.href}
                alt={post.author.name}
                width={32}
                height={32}
                quality={90}
              />
            )}
            <span class="post-card-author-name">{post.author.name}</span>
          </div>
        )
      }
    </div>
  </a>
  <div class="post-card-categories">
    {
      post.categories.map((category) => (
        <a href={`/blog/categoria/${category.slug}`} class="chip secondary">
          {category.name}
        </a>
      ))
    }
  </div>
</article>

<style>
  .post-card {
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 1rem;

    background-color: var(--color-surface-200);
    border-radius: var(--radius-3xl);
    border: 1px solid var(--color-border-200);

    box-shadow: var(--shadow-md);
    transition: box-shadow 0.2s ease;

    position: relative;
  }

  .post-card:hover {
    box-shadow: var(--shadow-lg);
  }

  .post-card:focus-within {
    outline: 2px solid var(--color-secondary-300);
  }

  .post-card-image {
    width: 100%;
    aspect-ratio: 16 / 5;
    overflow: hidden;
    background-color: var(--color-surface-300);
  }

  .post-card-hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-card-hero-image {
    transform: scale(1.05);
  }

  .post-card-content {
    padding: 1.5rem;
  }

  .post-card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .post-card-meta time {
    font-family: var(--font-paragraph);
    font-size: 0.875rem;
    color: var(--color-content-100);
  }

  .post-card-categories {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    position: absolute;
    bottom: 1rem;
    right: 1rem;
  }

  .post-card-title {
    font-family: var(--font-title);
    font-size: 1.5rem;
    color: var(--color-content-400);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .post-card-description {
    font-family: var(--font-paragraph);
    font-size: 1rem;
    color: var(--color-content-300);
    line-height: 1.6;
  }

  .post-card-author {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border-200);
  }

  .post-card-author-avatar {
    border-radius: var(--radius-full);
    object-fit: cover;
  }

  .post-card-author-name {
    font-family: var(--font-paragraph);
    font-size: 0.875rem;
    color: var(--color-content-300);
  }

  @media (max-width: 640px) {
    .post-card-content {
      padding: 1rem;
    }

    .post-card-title {
      font-size: 1.25rem;
    }

    .post-card-description {
      font-size: 0.9rem;
    }
  }
</style>
