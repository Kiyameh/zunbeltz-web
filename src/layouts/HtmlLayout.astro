---
import "@/styles/reset.css";
import "@/styles/fonts.css";
import "@/styles/theme.css";
import "@/styles/global.css";
import ThemeLoader from "@/components/molecules/ThemeLoader.astro";

interface Props {
  pageTitle: string;
  pageDescription?: string;
  pageTags?: string[];
}

const {
  pageTitle = "Zunbeltz.org",
  pageDescription = "Tu portal sobre espleología en Navarra",
  pageTags = [
    "espeleología",
    "barranquismo",
    "escalada",
    "naturaleza",
    "navarra",
    "cuevas",
    "blog",
  ],
} = Astro.props;
---

<!-- TODO: incluir etiquetas OpenGraph y twitter, incluir manifest y robots, incluir favicon --><!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />

    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDescription} />
    <meta name="author" content="Andoni Abarzuza @kiyameh" />
    <meta name="tags" content={pageTags?.join(", ") ?? ""} />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width" />

    <title>{pageTitle}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <ThemeLoader />
  </head>
  <body>
    <slot />
  </body>
</html>
