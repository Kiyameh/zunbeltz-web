---
import "@/styles/global.css";
import "@/styles/fonts.css";
import "@/styles/components.css";

import ThemeLoader from "@/components/header/ThemeLoader.astro";
import DesktopHeader from "@/components/header/DesktopHeader.astro";
import MobileHeader from "@/components/header/MobileHeader.astro";
import OpenGraphTags from "@/components/SEO/OpenGraphTags.astro";
import TwitterCardTags from "@/components/SEO/TwitterCardTags.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";
import main_og from "@/assets/opengraph/og_landing.jpg";

interface Props {
  metaInfo?: MetaInfo;
}

const defaultMeta: MetaInfo = {
  pageTitle: "Zunbeltz | Espeleología en Navarra",
  pageDescription: "Tu portal sobre espeleología en Navarra",
  pageTags: [
    "espeleología",
    "barranquismo",
    "escalada",
    "naturaleza",
    "navarra",
    "cuevas",
    "blog",
  ],
  pageAuthor: "Andoni Abarzuza @kiyameh",
  pageUrl: "https://zunbeltz.org",
  pageImage: main_og.src,
  pageType: "website",
  twitterCard: "summary",
  twitterSite: "@zunbeltz",
};

const { metaInfo = defaultMeta } = Astro.props;

// Combinar valores por defecto con los proporcionados
const finalMetaInfo: MetaInfo = { ...defaultMeta, ...metaInfo };
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Meta tags básicos -->
    <title>{finalMetaInfo.pageTitle}</title>
    <meta name="title" content={finalMetaInfo.pageTitle} />
    <meta name="description" content={finalMetaInfo.pageDescription} />
    <meta name="author" content={finalMetaInfo.pageAuthor} />
    <meta name="keywords" content={finalMetaInfo.pageTags?.join(", ") ?? ""} />
    <link rel="canonical" href={finalMetaInfo.pageUrl} />

    <!-- Open Graph / Facebook -->
    <OpenGraphTags metaInfo={finalMetaInfo} />

    <!-- Twitter Cards -->
    <TwitterCardTags metaInfo={finalMetaInfo} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Pagefind: Utilidad de búsqueda -->
    <link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
    <script src="/pagefind/pagefind-ui.js" is:inline></script>

    <!-- Theme Loader -->
    <ThemeLoader />

    <!-- Slot adicional para meta tags específicos de página -->
    <slot name="head" />
  </head>
  <body>
    <div class="desktop-header">
      <DesktopHeader />
    </div>

    <div class="mobile-header">
      <MobileHeader />
    </div>

    <slot />
    <footer>This is a footer</footer>
  </body>
</html>

<style>
  .desktop-header {
    display: none;
  }

  @media (min-width: 1080px) {
    .desktop-header {
      display: block;
    }
  }

  .mobile-header {
    display: block;
  }

  @media (min-width: 1080px) {
    .mobile-header {
      display: none;
    }
  }
  body {
    width: 100%;
    min-height: 100vh;
    background-color: var(--color-surface-100);
    color: var(--color-content-300);
    font-family: var(--font-paragraph);
  }
  footer {
    width: 100%;
    height: 220px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: var(--color-surface-500);
  }
</style>
