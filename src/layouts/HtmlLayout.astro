---
import "@/styles/global.css";
import "@/styles/fonts.css";
import "@/styles/components.css";

import ThemeLoader from "@/components/theme/ThemeLoader.astro";
import DesktopHeader from "@/components/header/DesktopHeader.astro";
import MobileHeader from "@/components/header/MobileHeader.astro";

interface Props {
  pageTitle: string;
  pageDescription?: string;
  pageTags?: string[];
}
const {
  pageTitle = "Zunbeltz | Espeleología en Navarra",
  pageDescription = "Tu portal sobre espeleología en Navarra",
  pageTags = [
    "espeleología",
    "barranquismo",
    "escalada",
    "naturaleza",
    "navarra",
    "cuevas",
    "blog",
  ],
} = Astro.props;

/* TODO: incluir etiquetas OpenGraph y twitter, incluir manifest y robots, incluir favicon */
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDescription} />
    <meta name="author" content="Andoni Abarzuza @kiyameh" />
    <meta name="tags" content={pageTags?.join(", ") ?? ""} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{pageTitle}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Pagefind: Utilidad de búsqueda -->
    <link href="/pagefind/pagefind-ui.css" rel="stylesheet">
    <script src="/pagefind/pagefind-ui.js" is:inline></script>
    <ThemeLoader />
  </head>
  <body>
    <div class="desktop-header">
  <DesktopHeader />
</div>

<div class="mobile-header">
  <MobileHeader />
</div>

    <slot />
    <footer>This is a footer</footer>

  </body>
</html>

<style>
    .desktop-header {
    display: none;
  }

  @media (min-width: 768px) {
    .desktop-header {
      display: block;
    }
  }

  .mobile-header {
    display: block;
  }

  @media (min-width: 768px) {
    .mobile-header {
      display: none;
    }
  }
  body {
    width: 100%;
    min-height: 100vh;
    background-color: var(--color-surface-100);
    color: var(--color-content-300);
    font-family: var(--font-paragraph);
  }
    footer{
    width: 100%;
    height: 220px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: var(--color-surface-500);
  }
</style>
