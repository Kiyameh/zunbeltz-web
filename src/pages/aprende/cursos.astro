---
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";

const meta: MetaInfo = {
  pageTitle: "Cursos Presenciales y Talleres en Navarra | Zunbeltz",
  pageDescription:
    "Mancha tu mono con nosotros. Próximas fechas para cursos de espeleo, barranquismo, autorescate y más en Navarra.",
  pageTags: [
    "Cursos presenciales",
    "Formación",
    "Navarra",
    "Talleres prácticos",
    "Espeleología",
    "Barranquismo",
    "Autorescate",
