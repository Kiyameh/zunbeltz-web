---
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import HeaderLayout from "@/layouts/HeaderLayout.astro";
import FooterLayout from "@/layouts/FooterLayout.astro";
---

<HtmlLayout
  pageTitle="Recorrido de Aprendizaje | Zunbeltz"
  pageDescription="El camino del buen amante de la aventura. Descubre tu ruta de aprendizaje personalizada"
  pageTags={["aprendizaje", "recorrido", "formación", "aventura", "progresión"]}
