---
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";
import og_escuela from "@/assets/opengraph/og_escuela.jpg";

const meta: MetaInfo = {
  pageTitle: "Tu Camino Formativo: De novato a experto | Zunbeltz",
  pageDescription:
    "¿Por dónde empezar? Descubre el itinerario recomendado para formarte en deportes de vertical y exploración segura.",
  pageTags: [
    "Itinerario formativo",
    "Aprender espeleología",
    "Niveles",
    "Guía aprendizaje",
  ],
  pageImage: og_escuela.src,
  pageUrl: `https://zunbeltz.org/aprende/recorrido`,
};
---

<HtmlLayout metaInfo={meta}>
  <main>
    <h1>Recorrido de Aprendizaje</h1>
  </main>
</HtmlLayout>

<style>
  main {
    min-height: 100vh;
    max-width: 56rem;
    margin-left: auto;
    margin-right: auto;
    padding: 3rem 1.5rem;
  }
</style>
