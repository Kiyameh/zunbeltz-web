---
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import HeaderLayout from "@/layouts/HeaderLayout.astro";
import FooterLayout from "@/layouts/FooterLayout.astro";
---

<HtmlLayout
  pageTitle="Escuela Zunbeltz | Aprende"
  pageDescription="Aprende espeleología, barranquismo y escalada con la Escuela Zunbeltz. Cursos online y presenciales"
  pageTags={[
    "escuela",
    "aprendizaje",
    "cursos",
    "espeleología",
    "barranquismo",
    "escalada",
  ]}
>
  <HeaderLayout />
  <main>
    <h1>Escuela Zunbeltz</h1>
  </main>
  <FooterLayout />
</HtmlLayout>

<style>
  main {
    min-height: 100vh;
    max-width: 56rem;
    margin-left: auto;
    margin-right: auto;
    padding: 3rem 1.5rem;
  }
</style>
