---
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";
import og_escuela from "@/assets/opengraph/og_escuela.jpg";

const meta: MetaInfo = {
  pageTitle: "Escuela Zunbeltz: Formación en Espeleología y Montaña",
  pageDescription:
    "Aprende espeleología, barranquismo y escalada con la Escuela Zunbeltz. Cursos online y presenciales",
  pageTags: [
    "Escuela",
    "Cursos",
    "Formación",
    "Espeleología",
    "Barranquismo",
    "Escalada",
    "Seguridad",
  ],
  pageImage: og_escuela.src,
  pageUrl: `https://zunbeltz.org/aprende`,
};
---

<HtmlLayout metaInfo={meta}>
  <main>
    <h1>Escuela Zunbeltz</h1>
  </main>
</HtmlLayout>

<style>
  main {
    min-height: 100vh;
    max-width: 56rem;
    margin-left: auto;
    margin-right: auto;
    padding: 3rem 1.5rem;
  }
</style>
