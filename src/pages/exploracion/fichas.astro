---
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";

const meta: MetaInfo = {
  pageTitle: "Generador de Fichas de Instalación | Herramientas Zunbeltz",
  pageDescription:
    "Crea fichas técnicas profesionales para tus exploraciones. Herramienta gratuita para equipadores y espeleólogos.",
  pageTags: [
    "Generador fichas",
    "Ficha de instalación",
    "Equipamiento",
    "Anclajes",
    "Software espeleológico",
  ],
  pageUrl: `https://zunbeltz.org/exploracion/fichas`,
};
---

<HtmlLayout metaInfo={meta}>
  <main>
    <h1>Generador de Fichas</h1>
  </main>
</HtmlLayout>

<style>
  main {
    min-height: 100vh;
    max-width: 56rem;
    margin-left: auto;
    margin-right: auto;
    padding: 3rem 1.5rem;
  }
</style>
