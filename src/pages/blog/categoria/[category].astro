---
import type { GetStaticPaths } from "astro";
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import Breadcrumb from "@/components/ui/Breadcrumb.astro";
import PostCard from "@/components/blog/PostCard.astro";
import BlogLayout from "@/layouts/BlogLayout.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";
import { getAllCategories } from "@/services/strapi/repositories/category.repo";

export const getStaticPaths = (async () => {
  const categories = await getAllCategories();

  return await Promise.all(
    categories.map(async (category) => {
      return {
        params: { category: category.slug },
        props: { category },
      };
    })
  );
}) satisfies GetStaticPaths;

const { category } = Astro.props;

const meta: MetaInfo = {
  pageTitle: `Artículos sobre ${category.name} | La falla de Zunbeltz`,
  pageDescription: `Todo lo que necesitas saber sobre ${category.name}. Artículos destacados en Zunbeltz.`,
  pageTags: [category.name, "Información", "Guía", "Recursos", "Zunbeltz"],
  pageUrl: `https://zunbeltz.org/blog/categoria/${category.slug}`,
};
---

<HtmlLayout metaInfo={meta}>
  <BlogLayout>
    <Breadcrumb class="category-breadcrumb" />

    <header class="category-header">
      <h1 class="title-1">Categoría: {category.name}</h1>
      <p class="category-count">
        {category.posts.length}
        {category.posts.length === 1 ? "post" : "posts"}
      </p>
    </header>

    <div class="posts-grid">
      {category.posts.map((post) => <PostCard post={post} />)}
    </div>

    {
      category.posts.length === 0 && (
        <div class="no-posts">
          <p>No hay posts en esta categoría todavía.</p>
        </div>
      )
    }
  </BlogLayout>
</HtmlLayout>

<style>
  .category-header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--color-border-200);
  }

  .category-count {
    font-family: var(--font-paragraph);
    font-size: 1rem;
    color: var(--color-content-200);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 1rem;
  }

  .no-posts {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--color-content-200);
    font-family: var(--font-paragraph);
    font-size: 1.125rem;
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }

    .category-container {
      padding: 2rem 1rem;
    }
  }

  @media (max-width: 640px) {
    .category-header h1 {
      font-size: 1.75rem;
    }
  }
</style>
