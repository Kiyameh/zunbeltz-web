---
import type { GetStaticPaths } from "astro";
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import Breadcrumb from "@/components/ui/Breadcrumb.astro";
import PostCard from "@/components/blog/PostCard.astro";
import BlogCategories from "@/components/blog/BlogCategories.astro";
import { getAllCategories, getPostsByCategory } from "@/lib/blog/categories";

export const getStaticPaths = (async () => {
  const categories = await getAllCategories();

  return await Promise.all(
    categories.map(async (categoria) => {
      const posts = await getPostsByCategory(categoria);
      return {
        params: { categoria },
        props: { posts, categoria },
      };
    }),
  );
}) satisfies GetStaticPaths;

const { posts, categoria } = Astro.props;
const pageTitle = `Categoría: ${categoria}`;
const pageDescription = `Todos los posts de la categoría ${categoria}`;
---

<HtmlLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <main class="category-container">
    <Breadcrumb class="category-breadcrumb" />

    <header class="category-header">
      <h1 class="title-1">Categoría: {categoria}</h1>
      <p class="category-count">
        {posts.length}
        {posts.length === 1 ? "post" : "posts"}
      </p>
    </header>

    <div class="posts-grid">
      {posts.map((post) => <PostCard post={post} />)}
    </div>

    {
      posts.length === 0 && (
        <div class="no-posts">
          <p>No hay posts en esta categoría todavía.</p>
        </div>
      )
    }
  </main>

  <div class="blog-categories">
    <BlogCategories />
  </div>
</HtmlLayout>

<style>
  .category-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 0.5rem 2rem 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .category-header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--color-border-200);
  }

  .category-count {
    font-family: var(--font-paragraph);
    font-size: 1rem;
    color: var(--color-content-200);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 1rem;
  }

  .no-posts {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--color-content-200);
    font-family: var(--font-paragraph);
    font-size: 1.125rem;
  }

  .blog-categories {
    position: fixed;
    top: 4rem;
    right: 0;
    height: 100vh;
    overflow-y: auto;
    padding: 2rem;
  }

  @media (max-width: 1520px) {
    .blog-categories {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }

    .category-container {
      padding: 2rem 1rem;
    }
  }

  @media (max-width: 640px) {
    .category-header h1 {
      font-size: 1.75rem;
    }
  }
</style>
