---
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import Breadcrumb from "@/components/ui/Breadcrumb.astro";
import { getCategoriesWithCountArray } from "@/utils/blog/categories";
import BlogLayout from "@/layouts/BlogLayout.astro";

const categories = await getCategoriesWithCountArray();

// Calcular tamaños relativos basados en el número de posts
const maxCount = Math.max(...categories.map((c) => c.count));
const minCount = Math.min(...categories.map((c) => c.count));

// Función para calcular el tamaño de la categoría (1-5)
function getCategorySize(count: number): number {
  if (maxCount === minCount) return 3; // Todas del mismo tamaño si tienen el mismo count

  const range = maxCount - minCount;
  const normalized = (count - minCount) / range;

  // Distribuir en 5 niveles
  if (normalized >= 0.8) return 5;
  if (normalized >= 0.6) return 4;
  if (normalized >= 0.4) return 3;
  if (normalized >= 0.2) return 2;
  return 1;
}

const pageTitle = "Todas las Categorías";
const pageDescription = "Explora todos los posts organizados por categorías";
---

<HtmlLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <BlogLayout>
    <Breadcrumb />

    <header class="categories-header">
      <h1 class="title-1">Categorías del Blog</h1>
      <p class="categories-description">
        Explora {categories.length}
        {categories.length === 1 ? "categoría" : "categorías"} con un total de {
          categories.reduce((sum, c) => sum + c.count, 0)
        } posts
      </p>
    </header>

    <div class="tag-cloud">
      {
        categories.map((category) => {
          const size = getCategorySize(category.count);
          return (
            <a
              href={`/blog/categoria/${category.name}`}
              class={`chip secondary tag-size-${size}`}
              title={`${category.count} ${category.count === 1 ? "post" : "posts"}`}
            >
              {category.name}
              <span class="tag-count">({category.count})</span>
            </a>
          );
        })
      }
    </div>

    <section class="categories-list">
      <h2 class="title-2">Lista completa</h2>
      <ul class="list">
        {
          categories.map((category) => (
            <li>
              <a href={`/blog/categoria/${category.name}`}>
                <span class="list-name">{category.name}</span>
                <span class="list-count">
                  {category.count} {category.count === 1 ? "post" : "posts"}
                </span>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </BlogLayout>
</HtmlLayout>

<style>
  .categories-header {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid var(--color-border-200);
  }

  .categories-description {
    font-family: var(--font-paragraph);
    font-size: 1.125rem;
    color: var(--color-content-200);
  }

  /* Nube de tags */
  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background-color: var(--color-surface-200);
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-border-200);
  }

  .tag-count {
    font-size: 0.875em;
    opacity: 0.7;
  }

  /* Tamaños de tags basados en popularidad */
  .tag-size-1 {
    font-size: 0.875rem;
  }

  .tag-size-2 {
    font-size: 1rem;
  }

  .tag-size-3 {
    font-size: 1.125rem;
  }

  .tag-size-4 {
    font-size: 1.25rem;
  }

  .tag-size-5 {
    font-size: 1.5rem;
  }

  /* Lista completa */
  .categories-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
    list-style: none;
  }

  .list li {
    background-color: var(--color-surface-200);
    border: 1px solid var(--color-border-200);
    border-radius: var(--radius-lg);
    transition: all 0.2s ease;
  }

  .list li:hover {
    border-color: var(--color-primary-300);
    box-shadow: var(--shadow-sm);
  }

  .list a {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    text-decoration: none;
    width: 100%;
  }

  .list-name {
    font-family: var(--font-paragraph);
    font-size: 1rem;
    color: var(--color-content-400);
    font-weight: 500;
  }

  .list-count {
    font-family: var(--font-paragraph);
    font-size: 0.875rem;
    color: var(--color-content-200);
    background-color: var(--color-surface-300);
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
  }

  @media (max-width: 768px) {
    .categories-container {
      padding: 2rem 1rem;
      gap: 2rem;
    }

    .tag-cloud {
      padding: 1.5rem;
      gap: 0.75rem;
    }

    .tag-size-4,
    .tag-size-5 {
      font-size: 1.125rem;
    }

    .list {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .categories-header h1 {
      font-size: 1.75rem;
    }

    .categories-description {
      font-size: 1rem;
    }

    .tag-cloud {
      justify-content: flex-start;
    }
  }
</style>
