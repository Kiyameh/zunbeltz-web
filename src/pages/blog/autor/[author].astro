---
import type { GetStaticPaths } from "astro";

import HtmlLayout from "@/layouts/HtmlLayout.astro";
import BlogLayout from "@/layouts/BlogLayout.astro";
import Breadcrumb from "@/components/ui/Breadcrumb.astro";
import PostCard from "@/components/blog/PostCard.astro";
import AuthorProfile from "@/components/blog/AuthorProfile.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";
import { getAllAuthors } from "@/services/strapi/repositories/author.repo";

export const getStaticPaths = (async () => {
  const authors = await getAllAuthors();

  return await Promise.all(
    authors.map(async (author) => {
      return {
        params: { author: author.slug },
        props: { author },
      };
    }),
  );
}) satisfies GetStaticPaths;

const { author } = Astro.props;

const meta: MetaInfo = {
  pageTitle: `Perfil de ${author.name} | La falla de Zunbeltz`,
  pageDescription: `Artículos, exploraciones y aportaciones de ${author.name}. Conoce su trayectoria y lee sus publicaciones.`,
  pageTags: [author.name, "Perfil", "Publicaciones", "Experiencia", "Contacto"],
  pageUrl: `https://zunbeltz.org/blog/autor/${author.slug}`,
};
---

<HtmlLayout metaInfo={meta}>
  <BlogLayout>
    <Breadcrumb class="author-breadcrumb" />

    <AuthorProfile author={author} />

    {
      author.posts ? (
        <section class="author-posts">
          <h2 class="title-2">Posts de {author.name}</h2>
          <p class="posts-count">
            {author.posts.length}
            {author.posts.length === 1 ? "post publicado" : "posts publicados"}
          </p>

          <div class="posts-grid">
            {author.posts.map((post) => (
              <PostCard post={post} />
            ))}
          </div>
        </section>
      ) : (
        <div class="no-posts">
          <p>Este autor aún no ha publicado ningún post.</p>
        </div>
      )
    }
  </BlogLayout>
</HtmlLayout>

<style>
  .author-posts {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .posts-count {
    font-family: var(--font-paragraph);
    font-size: 1rem;
    color: var(--color-content-200);
    margin-top: -0.5rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 1rem;
  }

  .no-posts {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--color-content-200);
    font-family: var(--font-paragraph);
    font-size: 1.125rem;
  }

  @media (max-width: 768px) {
    .author-container {
      padding: 2rem 1rem;
      gap: 2rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .author-posts h2 {
      font-size: 1.5rem;
    }
  }
</style>
