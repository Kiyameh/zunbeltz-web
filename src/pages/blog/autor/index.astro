---
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import Breadcrumb from "@/components/ui/Breadcrumb.astro";
import AuthorProfile from "@/components/blog/AuthorProfile.astro";
import { getAuthorsWithPosts, getAuthorPostCounts } from "@/lib/blog/authors";
import BlogLayout from "@/layouts/BlogLayout.astro";

const authors = await getAuthorsWithPosts();
const postCounts = await getAuthorPostCounts();

// Ordenar autores por número de posts (descendente)
const sortedAuthors = authors.sort((a, b) => {
  const countA = postCounts[a.id] || 0;
  const countB = postCounts[b.id] || 0;
  return countB - countA;
});

const pageTitle = "Autores";
const pageDescription =
  "Conoce a los autores que contribuyen al blog de Zunbeltz.org";
---

<HtmlLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <BlogLayout>
    <Breadcrumb />

    <header class="authors-header">
      <h1 class="title-1">Autores del Blog</h1>
      <p class="authors-description">
        Conoce a {authors.length}
        {authors.length === 1 ? "autor" : "autores"} que {
          authors.length === 1 ? "comparte" : "comparten"
        } conocimientos y experiencias en espeleología y deportes de montaña.
      </p>
    </header>

    <div class="authors-grid">
      {
        sortedAuthors.map((author) => (
          <div class="author-card">
            <AuthorProfile author={author} />
            <div class="author-stats">
              <span class="chip secondary">
                {postCounts[author.id] || 0}{" "}
                {postCounts[author.id] === 1 ? "post" : "posts"}
              </span>
            </div>
          </div>
        ))
      }
    </div>

    {
      authors.length === 0 && (
        <div class="no-authors">
          <p>Aún no hay autores con posts publicados.</p>
        </div>
      )
    }
  </BlogLayout>
</HtmlLayout>

<style>
  .authors-header {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid var(--color-border-200);
  }

  .authors-description {
    font-family: var(--font-paragraph);
    font-size: 1.125rem;
    color: var(--color-content-200);
  }

  .authors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .author-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .author-stats {
    display: flex;
    justify-content: flex-end;
    padding: 0 0.5rem;
  }

  .no-authors {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--color-content-200);
    font-family: var(--font-paragraph);
    font-size: 1.125rem;
  }

  @media (max-width: 768px) {
    .authors-container {
      padding: 2rem 1rem;
      gap: 2rem;
    }

    .authors-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .authors-header h1 {
      font-size: 1.75rem;
    }

    .authors-description {
      font-size: 1rem;
    }
  }
</style>
