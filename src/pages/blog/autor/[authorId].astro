---
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import Breadcrumb from "@/components/ui/Breadcrumb.astro";
import PostCard from "@/components/blog/PostCard.astro";
import AuthorProfile from "@/components/blog/AuthorProfile.astro";
import { getAuthorPosts } from "@/utils/blog/authors";
import BlogLayout from "@/layouts/BlogLayout.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";

export const getStaticPaths = (async () => {
  const authors = await getCollection("authors");

  return await Promise.all(
    authors.map(async (author) => {
      const posts = await getAuthorPosts(author.id);
      return {
        params: { authorId: author.id },
        props: { author, posts },
      };
    }),
  );
}) satisfies GetStaticPaths;

const { author, posts } = Astro.props;

const meta: MetaInfo = {
  pageTitle: `Perfil de ${author.data.name} | La falla de Zunbeltz`,
  pageDescription: `Artículos, exploraciones y aportaciones de ${author.data.name}. Conoce su trayectoria y lee sus publicaciones.`,
  pageTags: [
    author.data.name,
    "Perfil",
    "Publicaciones",
    "Experiencia",
    "Contacto",
  ],
  pageUrl: `https://zunbeltz.org/blog/autor/${author.id}`,
};
---

<HtmlLayout metaInfo={meta}>
  <BlogLayout>
    <Breadcrumb class="author-breadcrumb" />

    <AuthorProfile author={author} />

    <section class="author-posts">
      <h2 class="title-2">Posts de {author.data.name}</h2>
      <p class="posts-count">
        {posts.length}
        {posts.length === 1 ? "post publicado" : "posts publicados"}
      </p>

      <div class="posts-grid">
        {posts.map((post) => <PostCard post={post} />)}
      </div>

      {
        posts.length === 0 && (
          <div class="no-posts">
            <p>Este autor aún no ha publicado ningún post.</p>
          </div>
        )
      }
    </section>
  </BlogLayout>
</HtmlLayout>

<style>
  .author-posts {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .posts-count {
    font-family: var(--font-paragraph);
    font-size: 1rem;
    color: var(--color-content-200);
    margin-top: -0.5rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 1rem;
  }

  .no-posts {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--color-content-200);
    font-family: var(--font-paragraph);
    font-size: 1.125rem;
  }

  @media (max-width: 768px) {
    .author-container {
      padding: 2rem 1rem;
      gap: 2rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .author-posts h2 {
      font-size: 1.5rem;
    }
  }
</style>
