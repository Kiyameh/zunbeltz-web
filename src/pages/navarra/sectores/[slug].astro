---
import { getCollection, type CollectionEntry } from "astro:content";
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";
import Breadcrumb from "@/components/ui/Breadcrumb.astro";
import HeroSection from "@/components/navarra/shared/HeroSection.astro";
import SectorProperties from "@/components/navarra/climbing/SectorProperties.astro";
import RestrictionsCard from "@/components/navarra/shared/RestrictionsCard.astro";
import LogisticCard from "@/components/navarra/shared/LogisticCard.astro";
import ImageGallery from "@/components/navarra/shared/ImageGallery.astro";

export async function getStaticPaths() {
  const sectors = await getCollection("climbingSectors");
  const climbingRoutes = await getCollection("climbingRoutes");
  const multiPitchRoutes = await getCollection("multiPitchRoutes");

  return sectors.map((sector) => {
    const relatedClimbingRoutes = climbingRoutes.filter(
      (route) => route.data.climbingSector?.id === sector.slug,
    );
    const relatedMultiPitchRoutes = multiPitchRoutes.filter(
      (route) => route.data.climbingSector?.id === sector.slug,
    );

    return {
      params: { slug: sector.slug },
      props: { sector, relatedClimbingRoutes, relatedMultiPitchRoutes },
    };
  });
}

interface Props {
  sector: CollectionEntry<"climbingSectors">;
  relatedClimbingRoutes: CollectionEntry<"climbingRoutes">[];
  relatedMultiPitchRoutes: CollectionEntry<"multiPitchRoutes">[];
}

const { sector, relatedClimbingRoutes, relatedMultiPitchRoutes } = Astro.props;
const { Content } = await sector.render();

const meta: MetaInfo = {
  pageTitle: `${sector.data.name} | Sectores de Escalada | Zunbeltz`,
  pageDescription:
    sector.data.description || `Sector de escalada ${sector.data.name}`,
  pageTags: ["Escalada", "Navarra", "Sector", sector.data.orientation || ""],
  pageUrl: `https://zunbeltz.org/navarra/sectores/${sector.slug}`,
};
---

<HtmlLayout metaInfo={meta}>
  <main>
    <HeroSection
      title={sector.data.name}
      description={sector.data.description ||
        `Sector de escalada ${sector.data.name}`}
      photo={sector.data.mainPhoto}
    />

    <!-- Breadcrumb -->
    <div class="container">
      <Breadcrumb />
    </div>

    <!-- Main Content -->
    <div class="content">
      <div class="container">
        <div class="grid">
          <!-- Left Column: Main Info -->
          <div class="main-column">
            <!-- Sector Properties -->
            <SectorProperties sector={sector.data} />

            <!-- Markdown Content -->
            <section class="markdown-content">
              <Content />
            </section>

            <!-- Climbing Routes Table -->
            {
              relatedClimbingRoutes.length > 0 && (
                <section class="routes-section">
                  <h2 class="section-title">
                    Vías de Escalada ({relatedClimbingRoutes.length})
                  </h2>
                  <div class="table-container">
                    <table class="routes-table">
                      <thead>
                        <tr>
                          <th>Nombre</th>
                          <th>Altura</th>
                          <th>Anclajes</th>
                          <th>Tipo</th>
                          <th>Grado</th>
                        </tr>
                      </thead>
                      <tbody>
                        {relatedClimbingRoutes.map((route) => (
                          <tr>
                            <td class="route-name">
                              <a href={`/navarra/vias/${route.slug}`}>
                                {route.data.name}
                              </a>
                            </td>
                            <td>
                              {route.data.heightMeters
                                ? `${route.data.heightMeters}m`
                                : "-"}
                            </td>
                            <td>{route.data.anchorCount || "-"}</td>
                            <td>{route.data.anchorType || "-"}</td>
                            <td class="grade">
                              {route.data.grading.number}
                              {route.data.grading.letter}
                            </td>
                          </tr>
                        ))}
                      </tbody>
                    </table>
                  </div>
                </section>
              )
            }

            <!-- Multi-Pitch Routes -->
            {
              relatedMultiPitchRoutes.length > 0 && (
                <section class="multipitch-section">
                  <h2 class="section-title">
                    Vías de Varios Largos ({relatedMultiPitchRoutes.length})
                  </h2>
                  <div class="multipitch-list">
                    {relatedMultiPitchRoutes.map((route) => (
                      <a
                        href={`/navarra/grandes-vias/${route.slug}`}
                        class="multipitch-card"
                      >
                        <div class="multipitch-header">
                          <h3 class="multipitch-name">{route.data.name}</h3>
                          <span class="grade-badge">
                            {route.data.grading.number}
                            {route.data.grading.letter}
                          </span>
                        </div>
                        {route.data.description && (
                          <p class="multipitch-description">
                            {route.data.description}
                          </p>
                        )}
                        <div class="multipitch-stats">
                          <span class="stat">
                            <strong>Largos:</strong> {route.data.pitches.length}
                          </span>
                        </div>
                      </a>
                    ))}
                  </div>
                </section>
              )
            }
          </div>

          <!-- Right Column: Sidebar -->
          <aside class="sidebar">
            <RestrictionsCard restrictions={sector.data.restrictions} />
            <LogisticCard
              entryPoint={sector.data.entryPoint}
              accessInfo={sector.data.accessInfo}
            />
          </aside>
        </div>
      </div>
    </div>

    <!-- Multimedia Section -->
    <ImageGallery photos={sector.data.additionalPhotos || []} />
  </main>

  <style>
    /* Container */
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    /* Content Section */
    .content {
      padding: 3rem 0;
    }

    .grid {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 2rem;
    }

    .main-column {
      min-width: 0;
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .sidebar {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    /* Section Titles */
    .section-title {
      font-family: var(--font-title);
      font-size: 1.75rem;
      color: var(--color-content-500);
      margin: 0 0 1.5rem 0;
    }

    /* Markdown Content */
    .markdown-content {
      font-family: var(--font-paragraph);
      color: var(--color-content-300);
      line-height: 1.7;
    }

    /* Routes Table */
    .routes-section {
      margin-top: 1rem;
    }

    .table-container {
      overflow-x: auto;
      background: var(--color-surface-100);
      border: 2px solid var(--color-border-100);
      border-radius: var(--radius-xl);
    }

    .routes-table {
      width: 100%;
      border-collapse: collapse;
      font-family: var(--font-paragraph);
    }

    .routes-table thead {
      background: var(--color-surface-200);
    }

    .routes-table th {
      padding: 1rem;
      text-align: left;
      font-family: var(--font-title);
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--color-content-400);
      border-bottom: 2px solid var(--color-border-100);
    }

    .routes-table td {
      padding: 0.875rem 1rem;
      font-size: 0.9rem;
      color: var(--color-content-300);
      border-bottom: 1px solid var(--color-border-100);
    }

    .routes-table tbody tr:last-child td {
      border-bottom: none;
    }

    .routes-table tbody tr:hover {
      background: var(--color-surface-200);
    }

    .route-name a {
      color: var(--color-primary-300);
      text-decoration: none;
      font-weight: 600;
    }

    .route-name a:hover {
      text-decoration: underline;
    }

    .grade {
      font-family: var(--font-title);
      font-weight: 700;
      color: var(--color-secondary-400);
    }

    /* Multi-Pitch Routes */
    .multipitch-section {
      margin-top: 2rem;
    }

    .multipitch-list {
      display: grid;
      gap: 1.5rem;
    }

    .multipitch-card {
      padding: 1.5rem;
      background: var(--color-surface-100);
      border: 2px solid var(--color-border-100);
      border-radius: var(--radius-xl);
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .multipitch-card:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-lg);
      border-color: var(--color-secondary-300);
    }

    .multipitch-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 1rem;
      margin-bottom: 0.75rem;
    }

    .multipitch-name {
      font-family: var(--font-title);
      font-size: 1.25rem;
      color: var(--color-content-500);
      margin: 0;
    }

    .grade-badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      background: var(--color-secondary-100);
      color: var(--color-secondary-500);
      border-radius: var(--radius-md);
      font-family: var(--font-title);
      font-size: 0.875rem;
      font-weight: 700;
      white-space: nowrap;
    }

    .multipitch-description {
      font-family: var(--font-paragraph);
      font-size: 0.9rem;
      color: var(--color-content-300);
      line-height: 1.6;
      margin: 0 0 0.75rem 0;
    }

    .multipitch-stats {
      display: flex;
      gap: 1.5rem;
    }

    .stat {
      font-family: var(--font-paragraph);
      font-size: 0.875rem;
      color: var(--color-content-300);
    }

    .stat strong {
      color: var(--color-content-400);
      font-weight: 600;
    }

    /* Responsive */
    @media (max-width: 968px) {
      .grid {
        grid-template-columns: 1fr;
        gap: 2rem;
      }

      .sidebar {
        order: -1;
      }

      .table-container {
        font-size: 0.85rem;
      }

      .routes-table th,
      .routes-table td {
        padding: 0.75rem 0.5rem;
      }
    }
  </style>
</HtmlLayout>
