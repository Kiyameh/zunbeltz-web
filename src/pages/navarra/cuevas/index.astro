---
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";
import { getCollection } from "astro:content";
import Breadcrumb from "@/components/ui/Breadcrumb.astro";
import HeroSection from "@/components/navarra/shared/HeroSection.astro";
import og_cuevas from "@/assets/opengraph/og_cuevas.jpg";
import heroImage from "@/assets/navarra/cuevas.jpg";

const meta: MetaInfo = {
  pageTitle: "Cuevas y Simas de Navarra | Zunbeltz",
  pageDescription:
    "Zonas kársticas de Navarra y sus cavidades. Explora el mundo subterráneo de la provincia",
  pageTags: ["Cuevas", "Navarra", "Simas", "Larra", "Urbasa", "Aralar"],
  pageImage: og_cuevas.src,
  pageUrl: `https://zunbeltz.org/navarra/cuevas`,
};

// Obtener todas las cuevas
const caves = await getCollection("caves");
---

<HtmlLayout metaInfo={meta}>
  <main>
    <HeroSection
      title="Cuevas de Navarra"
      description="Explora el mundo subterráneo de Navarra. Cavidades, simas y recorridos espeleológicos en el territorio foral."
      photo={{ url: heroImage, caption: "Cuevas de Navarra" }}
    />

    <!-- Breadcrumb -->
    <div class="container">
      <Breadcrumb />
    </div>

    <!-- Content Section -->
    <section class="content">
      <div class="container">
        <div class="intro">
          <p>
            Navarra cuenta con importantes zonas kársticas donde se han
            documentado numerosas cavidades. Desde las profundas simas de Larra
            hasta las cuevas de Urbasa y Aralar, el territorio ofrece un amplio
            abanico de posibilidades para la exploración espeleológica.
          </p>
        </div>

        <!-- Lista de Cuevas -->
        <div class="list-header">
          <h2>Cuevas documentadas ({caves.length})</h2>
        </div>

        <div class="caves-list">
          {
            caves.map((cave) => (
              <a href={`/navarra/cuevas/${cave.slug}`} class="cave-card">
                <div class="cave-info">
                  <h3 class="cave-name">{cave.data.name}</h3>
                  <p class="cave-location">{cave.data.location}</p>
                  {cave.data.catalogCode && (
                    <span class="cave-code">{cave.data.catalogCode}</span>
                  )}
                </div>
                <div class="cave-stats">
                  {cave.data.depth && (
                    <div class="stat">
                      <span class="stat-label">Profundidad:</span>
                      <span class="stat-value">{cave.data.depth}m</span>
                    </div>
                  )}
                  {cave.data.length && (
                    <div class="stat">
                      <span class="stat-label">Desarrollo:</span>
                      <span class="stat-value">{cave.data.length}m</span>
                    </div>
                  )}
                </div>
              </a>
            ))
          }
        </div>

        {
          caves.length === 0 && (
            <div class="empty-state">
              <p>No hay cuevas documentadas todavía.</p>
            </div>
          )
        }
      </div>
    </section>
  </main>
</HtmlLayout>

<style>
  main {
    min-height: 100vh;
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Content Section */
  .content {
    padding: 3rem 0;
  }

  .intro {
    margin: 2rem 0 3rem;
  }

  .intro p {
    font-family: var(--font-paragraph);
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--color-content-300);
  }

  .list-header {
    margin-bottom: 2rem;
  }

  .list-header h2 {
    font-family: var(--font-title);
    font-size: 1.75rem;
    color: var(--color-content-500);
  }

  /* Caves List */
  .caves-list {
    display: grid;
    gap: 1.5rem;
  }

  .cave-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    padding: 1.5rem;
    background: var(--color-surface-100);
    border: 2px solid var(--color-border-100);
    border-radius: var(--radius-xl);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .cave-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-secondary-300);
  }

  .cave-info {
    flex: 1;
  }

  .cave-name {
    font-family: var(--font-title);
    font-size: 1.25rem;
    color: var(--color-content-500);
    margin-bottom: 0.5rem;
  }

  .cave-location {
    font-family: var(--font-paragraph);
    font-size: 0.9rem;
    color: var(--color-content-300);
    margin-bottom: 0.5rem;
  }

  .cave-code {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    background: var(--color-surface-300);
    border-radius: var(--radius-md);
    font-family: "Courier New", monospace;
    font-size: 0.8rem;
    color: var(--color-content-400);
  }

  .cave-stats {
    display: flex;
    gap: 2rem;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.25rem;
  }

  .stat-label {
    font-family: var(--font-paragraph);
    font-size: 0.75rem;
    color: var(--color-content-200);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-value {
    font-family: var(--font-title);
    font-size: 1.25rem;
    color: var(--color-secondary-300);
  }

  .empty-state {
    padding: 3rem;
    text-align: center;
    color: var(--color-content-200);
    font-family: var(--font-paragraph);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cave-card {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .cave-stats {
      width: 100%;
      justify-content: space-around;
    }

    .stat {
      align-items: center;
    }
  }
</style>
