---
import { getCollection, type CollectionEntry } from "astro:content";
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";
import Breadcrumb from "@/components/ui/Breadcrumb.astro";
import CoordinatesDisplay from "@/components/navarra/shared/CoordinatesDisplay";
import InfoCard from "@/components/navarra/shared/InfoCard";
import DurationBadge from "@/components/navarra/shared/DurationBadge";

export async function getStaticPaths() {
  const caves = await getCollection("caves");
  return caves.map((cave) => ({
    params: { slug: cave.slug },
    props: { cave },
  }));
}

interface Props {
  cave: CollectionEntry<"caves">;
}

const { cave } = Astro.props;
const { Content } = await cave.render();

const meta: MetaInfo = {
  pageTitle: `${cave.data.name} | Cuevas de Navarra | Zunbeltz`,
  pageDescription: cave.data.description,
  pageTags: ["Cueva", "Navarra", "Espeleología", cave.data.location],
  pageUrl: `https://zunbeltz.org/navarra/cuevas/${cave.slug}`,
};
---

<HtmlLayout metaInfo={meta}>
  <main>
    <!-- Breadcrumb -->
    <div class="container">
      <Breadcrumb />
    </div>

    <!-- Header -->
    <header class="header">
      <div class="container">
        <h1 class="title">{cave.data.name}</h1>
        <p class="location">{cave.data.location}</p>
        {
          cave.data.catalogCode && (
            <span class="catalog-code">{cave.data.catalogCode}</span>
          )
        }
      </div>
    </header>

    <!-- Main Content -->
    <div class="content">
      <div class="container">
        <div class="grid">
          <!-- Left Column: Main Info -->
          <div class="main-column">
            <!-- Description -->
            <section class="section">
              <p class="description">{cave.data.description}</p>
            </section>

            <!-- Markdown Content -->
            <section class="section markdown-content">
              <Content />
            </section>
          </div>

          <!-- Right Column: Sidebar -->
          <aside class="sidebar">
            <!-- Stats Card -->
            <InfoCard title="Datos Técnicos">
              <div class="stats-grid">
                {
                  cave.data.depth && (
                    <div class="stat-item">
                      <span class="stat-label">Profundidad</span>
                      <span class="stat-value">{cave.data.depth}m</span>
                    </div>
                  )
                }
                {
                  cave.data.length && (
                    <div class="stat-item">
                      <span class="stat-label">Desarrollo</span>
                      <span class="stat-value">{cave.data.length}m</span>
                    </div>
                  )
                }
                {
                  cave.data.coordinates.altitude && (
                    <div class="stat-item">
                      <span class="stat-label">Altitud</span>
                      <span class="stat-value">
                        {cave.data.coordinates.altitude}m
                      </span>
                    </div>
                  )
                }
              </div>
            </InfoCard>

            <!-- Coordinates Card -->
            <InfoCard title="Coordenadas">
              <CoordinatesDisplay
                coordinates={cave.data.coordinates}
                client:load
              />
            </InfoCard>

            <!-- Access Card -->
            {
              cave.data.access && (
                <InfoCard title="Acceso">
                  <p class="access-description">
                    {cave.data.access.description}
                  </p>
                  {cave.data.access.time && (
                    <div class="access-time">
                      <DurationBadge
                        duration={cave.data.access.time}
                        label="Aproximación"
                        client:load
                      />
                    </div>
                  )}
                  {cave.data.access.distance && (
                    <p class="access-distance">
                      Distancia: {cave.data.access.distance} km
                    </p>
                  )}
                </InfoCard>
              )
            }

            <!-- Restrictions Card -->
            {
              cave.data.restrictions?.hasRestrictions && (
                <InfoCard title="Restricciones" variant="warning">
                  {cave.data.restrictions.protectionStatus && (
                    <p class="restriction-item">
                      <strong>Protección:</strong>{" "}
                      {cave.data.restrictions.protectionStatus.join(", ")}
                    </p>
                  )}
                  {cave.data.restrictions.requiresPermit && (
                    <p class="restriction-item">
                      <strong>Permiso requerido</strong>
                      {cave.data.restrictions.permitInfo && (
                        <span>: {cave.data.restrictions.permitInfo}</span>
                      )}
                    </p>
                  )}
                  {cave.data.restrictions.closureSeasons &&
                    cave.data.restrictions.closureSeasons.length > 0 && (
                      <div class="restriction-item">
                        <strong>Cierres temporales:</strong>
                        <ul>
                          {cave.data.restrictions.closureSeasons.map(
                            (season) => (
                              <li>
                                {season.startDate} - {season.endDate}:{" "}
                                {season.reason}
                              </li>
                            )
                          )}
                        </ul>
                      </div>
                    )}
                </InfoCard>
              )
            }

            <!-- External Links -->
            {
              cave.data.subterraUrl && (
                <InfoCard title="Enlaces">
                  <a
                    href={cave.data.subterraUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="external-link"
                  >
                    Ver en Subterra →
                  </a>
                </InfoCard>
              )
            }
          </aside>
        </div>
      </div>
    </div>
  </main>
</HtmlLayout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Header */
  .header {
    padding: 2rem 0;
    border-bottom: 2px solid var(--color-border-100);
  }

  .title {
    font-family: var(--font-title);
    font-size: clamp(2rem, 5vw, 2.5rem);
    color: var(--color-content-500);
    margin-bottom: 0.5rem;
  }

  .location {
    font-family: var(--font-paragraph);
    font-size: 1.1rem;
    color: var(--color-content-300);
    margin-bottom: 1rem;
  }

  .catalog-code {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background: var(--color-surface-300);
    border-radius: var(--radius-md);
    font-family: "Courier New", monospace;
    font-size: 0.875rem;
    color: var(--color-content-400);
    font-weight: 600;
  }

  /* Content */
  .content {
    padding: 3rem 0;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 3rem;
  }

  .main-column {
    min-width: 0;
  }

  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .section {
    margin-bottom: 2rem;
  }

  .description {
    font-family: var(--font-paragraph);
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-content-400);
  }

  /* Stats Grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-label {
    font-family: var(--font-paragraph);
    font-size: 0.75rem;
    color: var(--color-content-200);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-value {
    font-family: var(--font-title);
    font-size: 1.5rem;
    color: var(--color-secondary-300);
  }

  /* Access Info */
  .access-description {
    font-family: var(--font-paragraph);
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--color-content-300);
    margin-bottom: 1rem;
  }

  .access-time {
    margin: 1rem 0;
  }

  .access-distance {
    font-family: var(--font-paragraph);
    font-size: 0.875rem;
    color: var(--color-content-300);
    margin-top: 0.5rem;
  }

  /* Restrictions */
  .restriction-item {
    font-family: var(--font-paragraph);
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--color-content-400);
    margin-bottom: 0.75rem;
  }

  .restriction-item:last-child {
    margin-bottom: 0;
  }

  .restriction-item ul {
    margin-top: 0.5rem;
    padding-left: 1.25rem;
  }

  .restriction-item li {
    margin-bottom: 0.25rem;
  }

  /* External Links */
  .external-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-paragraph);
    font-size: 0.9rem;
    color: var(--color-secondary-300);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
  }

  .external-link:hover {
    color: var(--color-secondary-400);
    text-decoration: underline;
  }

  /* Markdown Content */
  .markdown-content {
    font-family: var(--font-paragraph);
    color: var(--color-content-300);
    line-height: 1.7;
  }

  .markdown-content :global(h2) {
    font-family: var(--font-title);
    font-size: 1.75rem;
    color: var(--color-content-500);
    margin: 2rem 0 1rem;
  }

  .markdown-content :global(h3) {
    font-family: var(--font-title);
    font-size: 1.375rem;
    color: var(--color-content-400);
    margin: 1.5rem 0 0.75rem;
  }

  .markdown-content :global(p) {
    margin-bottom: 1rem;
  }

  .markdown-content :global(ul),
  .markdown-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .markdown-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .markdown-content :global(strong) {
    color: var(--color-content-500);
    font-weight: 600;
  }

  .markdown-content :global(code) {
    background: var(--color-surface-200);
    padding: 0.125rem 0.375rem;
    border-radius: var(--radius-sm);
    font-family: "Courier New", monospace;
    font-size: 0.875em;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .sidebar {
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .header {
      padding: 1.5rem 0;
    }

    .title {
      font-size: 1.75rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
