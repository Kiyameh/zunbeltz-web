---
import { getCollection, type CollectionEntry } from "astro:content";
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";
import Breadcrumb from "@/components/ui/Breadcrumb.astro";
import HeroSection from "@/components/navarra/shared/HeroSection.astro";

export async function getStaticPaths() {
  const climbingCrags = await getCollection("climbingCrags");
  const climbingSectors = await getCollection("climbingSectors");
  return climbingCrags.map((crag) => {
    const relatedSectors = climbingSectors.filter(
      (sector) => sector.data.climbingCrag?.id === crag.slug,
    );
    return {
      params: { slug: crag.slug },
      props: { crag, relatedSectors },
    };
  });
}

interface Props {
  crag: CollectionEntry<"climbingCrags">;
  relatedSectors: CollectionEntry<"climbingSectors">[];
}

const { crag, relatedSectors } = Astro.props;
const { Content: CragContent } = await crag.render();

const meta: MetaInfo = {
  pageTitle: `${crag.data.name} | Escalada en Navarra | Zunbeltz`,
  pageDescription: crag.data.description,
  pageTags: ["Escalada", "Navarra", "Escuela", crag.data.location],
  pageUrl: `https://zunbeltz.org/navarra/paredes/${crag.slug}`,
};
---

<HtmlLayout metaInfo={meta}>
  <main>
    <HeroSection
      title={crag.data.name}
      description={crag.data.description}
      photo={crag.data.mainPhoto}
    />

    <!-- Breadcrumb -->
    <div class="container">
      <Breadcrumb />
    </div>

    <!-- Main Content -->
    <div class="content">
      <div class="container">
        <!-- Markdown Content -->
        <div class="markdown-content">
          <CragContent />
        </div>

        <!-- Sectores -->
        {
          relatedSectors.length > 0 && (
            <>
              <div class="list-header">
                <h2>Sectores ({relatedSectors.length})</h2>
              </div>

              <div class="sectors-list">
                {relatedSectors.map((sector) => (
                  <a
                    href={`/navarra/sectores/${sector.slug}`}
                    class="sector-card"
                  >
                    <div class="sector-info">
                      <div class="sector-header">
                        <h3 class="sector-name">{sector.data.name}</h3>
                        {sector.data.orientation && (
                          <span class="orientation-badge">
                            {sector.data.orientation}
                          </span>
                        )}
                      </div>
                      {sector.data.description && (
                        <p class="sector-description">
                          {sector.data.description}
                        </p>
                      )}
                    </div>
                  </a>
                ))}
              </div>
            </>
          )
        }
      </div>
    </div>
  </main>
</HtmlLayout>

<style>
  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Content Section */
  .content {
    padding: 3rem 0;
  }

  .list-header {
    margin: 3rem 0 2rem;
  }

  .list-header h2 {
    font-family: var(--font-title);
    font-size: 1.75rem;
    color: var(--color-content-500);
  }

  /* Sectors List */
  .sectors-list {
    display: grid;
    gap: 1.5rem;
  }

  .sector-card {
    padding: 1.5rem;
    background: var(--color-surface-100);
    border: 2px solid var(--color-border-100);
    border-radius: var(--radius-xl);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .sector-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-secondary-300);
  }

  .sector-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .sector-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .sector-name {
    font-family: var(--font-title);
    font-size: 1.25rem;
    color: var(--color-content-500);
    margin: 0;
  }

  .orientation-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: var(--color-secondary-100);
    color: var(--color-secondary-500);
    border-radius: var(--radius-md);
    font-family: var(--font-title);
    font-size: 0.875rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .sector-description {
    font-family: var(--font-paragraph);
    font-size: 0.9rem;
    color: var(--color-content-300);
    line-height: 1.6;
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .sector-card {
      padding: 1rem;
    }

    .sector-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
