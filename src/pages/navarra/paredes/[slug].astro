---
import { getCollection, type CollectionEntry } from "astro:content";
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";
import Breadcrumb from "@/components/ui/Breadcrumb.astro";
import CoordinatesDisplay from "@/components/navarra/shared/CoordinatesDisplay";
import InfoCard from "@/components/navarra/shared/InfoCard";

export async function getStaticPaths() {
  const climbingSchools = await getCollection("climbing");
  return climbingSchools.map((school) => ({
    params: { slug: school.slug },
    props: { school },
  }));
}

interface Props {
  school: CollectionEntry<"climbing">;
}

const { school } = Astro.props;
const { Content } = await school.render();

const meta: MetaInfo = {
  pageTitle: `${school.data.name} | Escalada en Navarra | Zunbeltz`,
  pageDescription: school.data.description,
  pageTags: ["Escalada", "Navarra", "Escuela", school.data.location],
  pageUrl: `https://zunbeltz.org/navarra/paredes/${school.slug}`,
};
---

<HtmlLayout metaInfo={meta}>
  <main>
    <!-- Breadcrumb -->
    <div class="container">
      <Breadcrumb />
    </div>

    <!-- Header -->
    <header class="header">
      <div class="container">
        <h1 class="title">{school.data.name}</h1>
        <p class="location">{school.data.location}</p>
        {
          school.data.orientation && school.data.orientation.length > 0 && (
            <div class="orientations">
              {school.data.orientation.map((o) => (
                <span class="orientation-badge">{o}</span>
              ))}
            </div>
          )
        }
        <p class="description">{school.data.description}</p>
      </div>
    </header>

    <!-- Main Content -->
    <div class="content">
      <div class="container">
        <div class="grid">
          <!-- Left Column: Main Info -->
          <div class="main-column">
            <!-- Markdown Content -->
            <section class="section markdown-content">
              <Content />
            </section>
          </div>

          <!-- Right Column: Sidebar -->
          <aside class="sidebar">
            <!-- Coordinates Card -->
            <InfoCard title="Coordenadas">
              <CoordinatesDisplay
                coordinates={school.data.coordinates}
                client:load
              />
            </InfoCard>

            <!-- Access Card -->
            {
              school.data.access && (
                <InfoCard title="Acceso">
                  <p class="access-description">{school.data.access}</p>
                </InfoCard>
              )
            }

            <!-- Orientation Card -->
            {
              school.data.orientation && school.data.orientation.length > 0 && (
                <InfoCard title="Orientación">
                  <div class="orientation-list">
                    {school.data.orientation.map((o) => (
                      <span class="orientation-item">{o}</span>
                    ))}
                  </div>
                </InfoCard>
              )
            }

            <!-- Restrictions Card -->
            {
              school.data.restrictions?.hasRestrictions && (
                <InfoCard title="Restricciones" variant="warning">
                  {school.data.restrictions.protectionStatus && (
                    <p class="restriction-item">
                      <strong>Protección:</strong>{" "}
                      {school.data.restrictions.protectionStatus.join(", ")}
                    </p>
                  )}
                  {school.data.restrictions.additionalInfo && (
                    <p class="restriction-item">
                      {school.data.restrictions.additionalInfo}
                    </p>
                  )}
                </InfoCard>
              )
            }
          </aside>
        </div>
      </div>
    </div>
  </main>
</HtmlLayout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Header */
  .header {
    padding: 2rem 0;
    border-bottom: 2px solid var(--color-border-100);
  }

  .title {
    font-family: var(--font-title);
    font-size: clamp(2rem, 5vw, 2.5rem);
    color: var(--color-content-500);
    margin-bottom: 0.5rem;
  }

  .location {
    font-family: var(--font-paragraph);
    font-size: 1.1rem;
    color: var(--color-content-300);
    margin-bottom: 1rem;
  }

  .orientations {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .orientation-badge {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background: var(--color-surface-300);
    border-radius: var(--radius-md);
    font-family: var(--font-paragraph);
    font-size: 0.875rem;
    color: var(--color-content-400);
    font-weight: 600;
  }

  .description {
    font-family: var(--font-paragraph);
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-content-400);
  }

  /* Content */
  .content {
    padding: 3rem 0;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 3rem;
  }

  .main-column {
    min-width: 0;
  }

  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .section {
    margin-bottom: 2rem;
  }

  /* Access Info */
  .access-description {
    font-family: var(--font-paragraph);
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--color-content-300);
  }

  /* Orientation List */
  .orientation-list {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .orientation-item {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background: var(--color-surface-200);
    border-radius: var(--radius-md);
    font-family: var(--font-paragraph);
    font-size: 0.875rem;
    color: var(--color-content-400);
    font-weight: 600;
  }

  /* Restrictions */
  .restriction-item {
    font-family: var(--font-paragraph);
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--color-content-400);
    margin-bottom: 0.75rem;
  }

  .restriction-item:last-child {
    margin-bottom: 0;
  }

  /* Markdown Content */
  .markdown-content {
    font-family: var(--font-paragraph);
    color: var(--color-content-300);
    line-height: 1.7;
  }

  .markdown-content :global(h2) {
    font-family: var(--font-title);
    font-size: 1.75rem;
    color: var(--color-content-500);
    margin: 2rem 0 1rem;
  }

  .markdown-content :global(h3) {
    font-family: var(--font-title);
    font-size: 1.375rem;
    color: var(--color-content-400);
    margin: 1.5rem 0 0.75rem;
  }

  .markdown-content :global(h4) {
    font-family: var(--font-title);
    font-size: 1.125rem;
    color: var(--color-content-400);
    margin: 1.25rem 0 0.5rem;
  }

  .markdown-content :global(p) {
    margin-bottom: 1rem;
  }

  .markdown-content :global(ul),
  .markdown-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .markdown-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .markdown-content :global(strong) {
    color: var(--color-content-500);
    font-weight: 600;
  }

  .markdown-content :global(code) {
    background: var(--color-surface-200);
    padding: 0.125rem 0.375rem;
    border-radius: var(--radius-sm);
    font-family: "Courier New", monospace;
    font-size: 0.875em;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .sidebar {
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .header {
      padding: 1.5rem 0;
    }

    .title {
      font-size: 1.75rem;
    }
  }
</style>
