---
import { getCollection, type CollectionEntry } from "astro:content";
import HtmlLayout from "@/layouts/HtmlLayout.astro";
import type { MetaInfo } from "@/components/SEO/MetaInfo";
import Breadcrumb from "@/components/ui/Breadcrumb.astro";
import InfoCard from "@/components/navarra/shared/InfoCard";

export async function getStaticPaths() {
  const canyons = await getCollection("canyons");
  return canyons.map((canyon) => ({
    params: { slug: canyon.slug },
    props: { canyon },
  }));
}

interface Props {
  canyon: CollectionEntry<"canyons">;
}

const { canyon } = Astro.props;
const { Content } = await canyon.render();

const meta: MetaInfo = {
  pageTitle: `${canyon.data.name} | Barrancos de Navarra | Zunbeltz`,
  pageDescription: canyon.data.description,
  pageTags: ["Barranco", "Navarra", "Barranquismo", "Canyoning"],
  pageUrl: `https://zunbeltz.org/navarra/rios/${canyon.slug}`,
};
---

<HtmlLayout metaInfo={meta}>
  <main>
    <!-- Breadcrumb -->
    <div class="container">
      <Breadcrumb />
    </div>

    <!-- Header -->
    <header class="header">
      <div class="container">
        <h1 class="title">{canyon.data.name}</h1>
        <p class="description">{canyon.data.description}</p>
      </div>
    </header>

    <!-- Main Content -->
    <div class="content">
      <div class="container">
        <div class="grid">
          <!-- Left Column: Main Info -->
          <div class="main-column">
            <!-- Markdown Content -->
            <section class="section markdown-content">
              <Content />
            </section>
          </div>

          <!-- Right Column: Sidebar -->
          <aside class="sidebar">
            <!-- Stats Card -->
            <InfoCard title="Datos Técnicos">
              <div class="stats-list">
                {
                  canyon.data.length && (
                    <div class="stat-item">
                      <span class="stat-label">Longitud</span>
                      <span class="stat-value">{canyon.data.length} km</span>
                    </div>
                  )
                }
                {
                  canyon.data.catchmentArea && (
                    <div class="stat-item">
                      <span class="stat-label">Cuenca</span>
                      <span class="stat-value">
                        {canyon.data.catchmentArea} km²
                      </span>
                    </div>
                  )
                }
                {
                  canyon.data.normalFlow && (
                    <div class="stat-item">
                      <span class="stat-label">Caudal normal</span>
                      <span class="stat-value">
                        {canyon.data.normalFlow} m³/s
                      </span>
                    </div>
                  )
                }
              </div>
            </InfoCard>

            <!-- Restrictions Card -->
            {
              canyon.data.restrictions?.hasRestrictions && (
                <InfoCard title="Restricciones" variant="warning">
                  {canyon.data.restrictions.protectionStatus && (
                    <p class="restriction-item">
                      <strong>Protección:</strong>{" "}
                      {canyon.data.restrictions.protectionStatus.join(", ")}
                    </p>
                  )}
                  {canyon.data.restrictions.requiresPermit && (
                    <p class="restriction-item">
                      <strong>Se requiere permiso</strong>
                    </p>
                  )}
                  {canyon.data.restrictions.additionalInfo && (
                    <p class="restriction-item">
                      {canyon.data.restrictions.additionalInfo}
                    </p>
                  )}
                </InfoCard>
              )
            }
          </aside>
        </div>
      </div>
    </div>
  </main>
</HtmlLayout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Header */
  .header {
    padding: 2rem 0;
    border-bottom: 2px solid var(--color-border-100);
  }

  .title {
    font-family: var(--font-title);
    font-size: clamp(2rem, 5vw, 2.5rem);
    color: var(--color-content-500);
    margin-bottom: 1rem;
  }

  .description {
    font-family: var(--font-paragraph);
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-content-400);
  }

  /* Content */
  .content {
    padding: 3rem 0;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 3rem;
  }

  .main-column {
    min-width: 0;
  }

  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .section {
    margin-bottom: 2rem;
  }

  /* Stats List */
  .stats-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .stat-item {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border-100);
  }

  .stat-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .stat-label {
    font-family: var(--font-paragraph);
    font-size: 0.875rem;
    color: var(--color-content-200);
  }

  .stat-value {
    font-family: var(--font-title);
    font-size: 1.125rem;
    color: var(--color-secondary-300);
    font-weight: 600;
  }

  /* Restrictions */
  .restriction-item {
    font-family: var(--font-paragraph);
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--color-content-400);
    margin-bottom: 0.75rem;
  }

  .restriction-item:last-child {
    margin-bottom: 0;
  }

  /* Markdown Content */
  .markdown-content {
    font-family: var(--font-paragraph);
    color: var(--color-content-300);
    line-height: 1.7;
  }

  .markdown-content :global(h2) {
    font-family: var(--font-title);
    font-size: 1.75rem;
    color: var(--color-content-500);
    margin: 2rem 0 1rem;
  }

  .markdown-content :global(h3) {
    font-family: var(--font-title);
    font-size: 1.375rem;
    color: var(--color-content-400);
    margin: 1.5rem 0 0.75rem;
  }

  .markdown-content :global(p) {
    margin-bottom: 1rem;
  }

  .markdown-content :global(ul),
  .markdown-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .markdown-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .markdown-content :global(strong) {
    color: var(--color-content-500);
    font-weight: 600;
  }

  .markdown-content :global(code) {
    background: var(--color-surface-200);
    padding: 0.125rem 0.375rem;
    border-radius: var(--radius-sm);
    font-family: "Courier New", monospace;
    font-size: 0.875em;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .sidebar {
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .header {
      padding: 1.5rem 0;
    }

    .title {
      font-size: 1.75rem;
    }
  }
</style>
